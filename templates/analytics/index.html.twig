{% extends 'base.html.twig' %}

{% block title %}Statistiques - WPilot{% endblock %}

{% block content %}
{# Header #}
<div class="mb-8">
    <h1 class="text-2xl lg:text-3xl font-bold text-white">Statistiques</h1>
    <p class="mt-1 text-white/60">Analysez les performances de vos sites et publications</p>
</div>

{# Stats Overview #}
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
    <div class="stat-card rounded-2xl p-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-white/50 text-sm font-medium">Total publications</p>
                <p class="text-3xl font-bold text-white mt-1">{{ publicationStats.total }}</p>
            </div>
            <div class="w-12 h-12 rounded-xl bg-primary-500/20 flex items-center justify-center">
                <svg class="w-6 h-6 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
            </div>
        </div>
    </div>

    <div class="stat-card rounded-2xl p-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-white/50 text-sm font-medium">Publiees</p>
                <p class="text-3xl font-bold text-emerald-400 mt-1">{{ publicationStats.published }}</p>
            </div>
            <div class="w-12 h-12 rounded-xl bg-emerald-500/20 flex items-center justify-center">
                <svg class="w-6 h-6 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
            </div>
        </div>
    </div>

    <div class="stat-card rounded-2xl p-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-white/50 text-sm font-medium">Planifiees</p>
                <p class="text-3xl font-bold text-amber-400 mt-1">{{ publicationStats.scheduled }}</p>
            </div>
            <div class="w-12 h-12 rounded-xl bg-amber-500/20 flex items-center justify-center">
                <svg class="w-6 h-6 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
            </div>
        </div>
    </div>

    <div class="stat-card rounded-2xl p-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-white/50 text-sm font-medium">Echouees</p>
                <p class="text-3xl font-bold text-red-400 mt-1">{{ publicationStats.failed }}</p>
            </div>
            <div class="w-12 h-12 rounded-xl bg-red-500/20 flex items-center justify-center">
                <svg class="w-6 h-6 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                </svg>
            </div>
        </div>
    </div>
</div>

{# Charts Grid #}
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
    {# Publications Chart #}
    <div class="glass-card rounded-2xl p-6">
        <h2 class="text-lg font-semibold text-white mb-6">Publications (30 derniers jours)</h2>
        <div class="h-64 flex items-end gap-1">
            {% set maxValue = 1 %}
            {% for date, count in publicationsPerDay %}
                {% if count > maxValue %}
                    {% set maxValue = count %}
                {% endif %}
            {% endfor %}
            {% for date, count in publicationsPerDay %}
                <div class="flex-1 flex flex-col items-center justify-end h-full group relative">
                    <div class="absolute bottom-full mb-2 hidden group-hover:block">
                        <div class="bg-dark-800 text-white text-xs px-2 py-1 rounded whitespace-nowrap">
                            {{ date }}: {{ count }} publication{{ count > 1 ? 's' : '' }}
                        </div>
                    </div>
                    <div class="w-full bg-primary-500/80 rounded-t transition-all hover:bg-primary-400"
                         style="height: {{ count > 0 ? (count / maxValue * 100) : 2 }}%"></div>
                </div>
            {% endfor %}
        </div>
        <div class="flex justify-between mt-4 text-xs text-white/40">
            <span>{{ publicationsPerDay|keys|first }}</span>
            <span>{{ publicationsPerDay|keys|last }}</span>
        </div>
    </div>

    {# Sites Status Chart #}
    <div class="glass-card rounded-2xl p-6">
        <h2 class="text-lg font-semibold text-white mb-6">Etat des sites</h2>
        <div class="flex items-center justify-center h-64">
            {% if siteStats.total > 0 %}
                <div class="relative w-48 h-48">
                    {# Circular progress chart #}
                    <svg class="w-full h-full transform -rotate-90" viewBox="0 0 100 100">
                        {% set onlinePercent = (siteStats.online / siteStats.total * 100) %}
                        {% set offlinePercent = (siteStats.offline / siteStats.total * 100) %}
                        {% set errorPercent = (siteStats.error / siteStats.total * 100) %}

                        {# Background circle #}
                        <circle cx="50" cy="50" r="40" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="12"/>

                        {# Online segment #}
                        <circle cx="50" cy="50" r="40" fill="none" stroke="#10b981" stroke-width="12"
                                stroke-dasharray="{{ onlinePercent * 2.51 }} 251"
                                stroke-dashoffset="0"/>

                        {# Offline segment #}
                        <circle cx="50" cy="50" r="40" fill="none" stroke="#f59e0b" stroke-width="12"
                                stroke-dasharray="{{ offlinePercent * 2.51 }} 251"
                                stroke-dashoffset="{{ -onlinePercent * 2.51 }}"/>

                        {# Error segment #}
                        <circle cx="50" cy="50" r="40" fill="none" stroke="#ef4444" stroke-width="12"
                                stroke-dasharray="{{ errorPercent * 2.51 }} 251"
                                stroke-dashoffset="{{ -(onlinePercent + offlinePercent) * 2.51 }}"/>
                    </svg>
                    <div class="absolute inset-0 flex flex-col items-center justify-center">
                        <span class="text-3xl font-bold text-white">{{ siteStats.total }}</span>
                        <span class="text-sm text-white/50">sites</span>
                    </div>
                </div>
            {% else %}
                <div class="text-center text-white/50">
                    <p>Aucun site connecte</p>
                </div>
            {% endif %}
        </div>
        <div class="flex justify-center gap-6 mt-4">
            <div class="flex items-center gap-2">
                <span class="w-3 h-3 rounded-full bg-emerald-500"></span>
                <span class="text-sm text-white/70">En ligne ({{ siteStats.online }})</span>
            </div>
            <div class="flex items-center gap-2">
                <span class="w-3 h-3 rounded-full bg-amber-500"></span>
                <span class="text-sm text-white/70">Hors ligne ({{ siteStats.offline }})</span>
            </div>
            <div class="flex items-center gap-2">
                <span class="w-3 h-3 rounded-full bg-red-500"></span>
                <span class="text-sm text-white/70">Erreur ({{ siteStats.error }})</span>
            </div>
        </div>
    </div>
</div>

{# Sites Performance Table #}
<div class="glass-card rounded-2xl overflow-hidden">
    <div class="p-6 border-b border-white/10">
        <h2 class="text-lg font-semibold text-white">Performance par site</h2>
    </div>
    {% if sites|length > 0 %}
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-white/5">
                    <tr>
                        <th class="px-6 py-4 text-left text-xs font-medium text-white/50 uppercase tracking-wider">Site</th>
                        <th class="px-6 py-4 text-left text-xs font-medium text-white/50 uppercase tracking-wider">Statut</th>
                        <th class="px-6 py-4 text-left text-xs font-medium text-white/50 uppercase tracking-wider">Derniere verification</th>
                        <th class="px-6 py-4 text-left text-xs font-medium text-white/50 uppercase tracking-wider">Uptime</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-white/5">
                    {% for site in sites %}
                        <tr class="table-row">
                            <td class="px-6 py-4">
                                <div class="flex items-center gap-3">
                                    <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-primary-500 to-primary-700 flex items-center justify-center text-white font-bold text-sm">
                                        {{ site.name|first|upper }}
                                    </div>
                                    <div>
                                        <p class="text-white font-medium">{{ site.name }}</p>
                                        <p class="text-xs text-white/50">{{ site.url|slice(0, 40) }}{{ site.url|length > 40 ? '...' : '' }}</p>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                {% if site.status == 'online' %}
                                    <span class="flex items-center gap-2 text-emerald-400">
                                        <span class="w-2 h-2 rounded-full bg-emerald-400"></span>
                                        En ligne
                                    </span>
                                {% elseif site.status == 'offline' %}
                                    <span class="flex items-center gap-2 text-amber-400">
                                        <span class="w-2 h-2 rounded-full bg-amber-400"></span>
                                        Hors ligne
                                    </span>
                                {% else %}
                                    <span class="flex items-center gap-2 text-red-400">
                                        <span class="w-2 h-2 rounded-full bg-red-400"></span>
                                        Erreur
                                    </span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 text-white/70">
                                {% if site.lastCheckedAt %}
                                    {{ site.lastCheckedAt|date('d/m/Y H:i') }}
                                {% else %}
                                    Jamais
                                {% endif %}
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex items-center gap-2">
                                    <div class="flex-1 h-2 rounded-full bg-white/10 max-w-24">
                                        <div class="h-2 rounded-full bg-emerald-500" style="width: {{ site.status == 'online' ? '100' : '0' }}%"></div>
                                    </div>
                                    <span class="text-sm text-white/50">{{ site.status == 'online' ? '100%' : '0%' }}</span>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <div class="p-12 text-center text-white/50">
            <p>Aucun site connecte</p>
        </div>
    {% endif %}
</div>
{% endblock %}
