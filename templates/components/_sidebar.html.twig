    {# User section #}
    <div class="p-4 border-t border-slate-100">
        <div class="flex items-center gap-3 p-3 rounded-xl bg-slate-50">
            <div class="w-10 h-10 rounded-full bg-gradient-to-br from-primary-400 to-primary-600 flex items-center justify-center text-white font-semibold">
                {{ app.user.fullName|first|upper }}
            </div>
            <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-slate-800 truncate">{{ app.user.fullName ?? app.user.email }}</p>
                <p class="text-xs text-slate-400 truncate">{{ app.user.email }}</p>
            </div>
            <a href="{{ path('app_logout') }}" class="p-2 rounded-lg hover:bg-slate-200 text-slate-400 hover:text-slate-600 transition-colors" title="Deconnexion">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
