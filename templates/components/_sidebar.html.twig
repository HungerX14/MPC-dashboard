        <p class="px-3 py-2 mt-6 text-xs font-semibold text-slate-400 uppercase tracking-wider">Contenu</p>

        <a href="{{ path('app_article_create') }}"
           class="sidebar-link flex items-center gap-3 px-3 py-2.5 rounded-lg {{ app.request.attributes.get('_route') starts with 'app_article' ? 'active' : '' }}">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
