<aside class="w-64 min-h-screen glass-card border-r border-white/10 flex flex-col">
    {# Logo #}
    <div class="p-6 border-b border-white/10">
        <a href="{{ path('app_dashboard') }}" class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-primary-400 to-primary-600 flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                </svg>
            </div>
            <div>
                <span class="text-xl font-bold text-white">WPilot</span>
                <span class="block text-xs text-white/50">WordPress Manager</span>
            </div>
        </a>
    </div>

    {# Navigation #}
    <nav class="flex-1 p-4 space-y-1">
        <p class="px-3 py-2 text-xs font-semibold text-white/40 uppercase tracking-wider">Principal</p>

        <a href="{{ path('app_dashboard') }}"
           class="sidebar-link flex items-center gap-3 px-3 py-2.5 rounded-lg text-white/70 {{ app.request.attributes.get('_route') == 'app_dashboard' ? 'active' : '' }}">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"/>
            </svg>
            <span>Dashboard</span>
        </a>

        <a href="{{ path('app_site_index') }}"
           class="sidebar-link flex items-center gap-3 px-3 py-2.5 rounded-lg text-white/70 {{ app.request.attributes.get('_route') starts with 'app_site' ? 'active' : '' }}">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
            </svg>
            <span>Sites</span>
        </a>

        <a href="{{ path('app_article_create') }}"
           class="sidebar-link flex items-center gap-3 px-3 py-2.5 rounded-lg text-white/70 {{ app.request.attributes.get('_route') starts with 'app_article' ? 'active' : '' }}">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
            <span>Publier</span>
        </a>

        <a href="{{ path('app_publications') }}"
           class="sidebar-link flex items-center gap-3 px-3 py-2.5 rounded-lg text-white/70 {{ app.request.attributes.get('_route') == 'app_publications' ? 'active' : '' }}">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
            </svg>
            <span>Publications</span>
        </a>

        <p class="px-3 py-2 mt-6 text-xs font-semibold text-white/40 uppercase tracking-wider">Analytics</p>

        <a href="{{ path('app_analytics') }}"
           class="sidebar-link flex items-center gap-3 px-3 py-2.5 rounded-lg text-white/70 {{ app.request.attributes.get('_route') == 'app_analytics' ? 'active' : '' }}">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
            <span>Statistiques</span>
        </a>

        <a href="{{ path('app_activity') }}"
           class="sidebar-link flex items-center gap-3 px-3 py-2.5 rounded-lg text-white/70 {{ app.request.attributes.get('_route') == 'app_activity' ? 'active' : '' }}">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span>Activite</span>
        </a>

        <p class="px-3 py-2 mt-6 text-xs font-semibold text-white/40 uppercase tracking-wider">Compte</p>

        <a href="{{ path('app_profile') }}"
           class="sidebar-link flex items-center gap-3 px-3 py-2.5 rounded-lg text-white/70 {{ app.request.attributes.get('_route') starts with 'app_profile' ? 'active' : '' }}">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
            <span>Profil</span>
        </a>

        <a href="{{ path('app_billing') }}"
           class="sidebar-link flex items-center gap-3 px-3 py-2.5 rounded-lg text-white/70 {{ app.request.attributes.get('_route') starts with 'app_billing' ? 'active' : '' }}">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
            </svg>
            <span>Abonnement</span>
        </a>
    </nav>

    {# User section #}
    <div class="p-4 border-t border-white/10">
        <div class="flex items-center gap-3 p-3 rounded-lg bg-white/5">
            <div class="w-10 h-10 rounded-full bg-gradient-to-br from-primary-400 to-primary-600 flex items-center justify-center text-white font-semibold">
                {{ app.user.fullName|first|upper }}
            </div>
            <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-white truncate">{{ app.user.fullName ?? app.user.email }}</p>
                <p class="text-xs text-white/50 truncate">{{ app.user.email }}</p>
            </div>
            <a href="{{ path('app_logout') }}" class="p-2 rounded-lg hover:bg-white/10 text-white/50 hover:text-white transition-colors" title="Deconnexion">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
                </svg>
            </a>
        </div>
    </div>
</aside>
