        <p class="px-3 py-2 mt-6 text-xs font-semibold text-slate-400 uppercase tracking-wider">Analytics</p>

        <a href="{{ path('app_analytics') }}"
           class="sidebar-link flex items-center gap-3 px-3 py-2.5 rounded-lg {{ app.request.attributes.get('_route') == 'app_analytics' ? 'active' : '' }}">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
