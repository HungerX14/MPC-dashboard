{% extends 'base.html.twig' %}

{% block title %}Profil - WPilot{% endblock %}

{% block content %}
{# Header #}
<div class="mb-8">
    <h1 class="text-2xl lg:text-3xl font-bold text-white">Mon profil</h1>
    <p class="mt-1 text-white/60">Gerez vos informations personnelles et vos preferences</p>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    {# Profile Card #}
    <div class="lg:col-span-1">
        <div class="glass-card rounded-2xl p-6 text-center">
            <div class="w-24 h-24 rounded-full bg-gradient-to-br from-primary-400 to-primary-600 flex items-center justify-center text-white text-3xl font-bold mx-auto mb-4">
                {{ app.user.fullName|default(app.user.email)|first|upper }}
            </div>
            <h2 class="text-xl font-semibold text-white">{{ app.user.fullName|default('Utilisateur') }}</h2>
            <p class="text-white/50 mt-1">{{ app.user.email }}</p>

            <div class="mt-6 pt-6 border-t border-white/10">
                <div class="flex items-center justify-between text-sm">
                    <span class="text-white/50">Membre depuis</span>
                    <span class="text-white">{{ app.user.createdAt|date('d/m/Y') }}</span>
                </div>
                <div class="flex items-center justify-between text-sm mt-3">
                    <span class="text-white/50">Forfait actuel</span>
                    <span class="px-2 py-1 rounded-full bg-primary-500/20 text-primary-400 text-xs font-medium">
                        {{ subscription.planDetails.name }}
                    </span>
                </div>
            </div>
        </div>
    </div>

    {# Settings Forms #}
    <div class="lg:col-span-2 space-y-6">
        {# Personal Information #}
        <div class="glass-card rounded-2xl p-6">
            <h3 class="text-lg font-semibold text-white mb-6">Informations personnelles</h3>
            <form action="{{ path('app_profile_update') }}" method="post">
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-white/70 mb-2">Nom complet</label>
                        <input type="text" name="full_name" value="{{ app.user.fullName }}"
                               class="form-input w-full px-4 py-3 rounded-xl" placeholder="Votre nom">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-white/70 mb-2">Email</label>
                        <input type="email" name="email" value="{{ app.user.email }}"
                               class="form-input w-full px-4 py-3 rounded-xl" placeholder="votre@email.com">
                    </div>
                </div>
                <div class="mt-6 flex justify-end">
                    <button type="submit" class="btn-primary px-6 py-2.5 rounded-xl text-white font-medium">
                        Enregistrer
                    </button>
                </div>
            </form>
        </div>

        {# Change Password #}
        <div class="glass-card rounded-2xl p-6">
            <h3 class="text-lg font-semibold text-white mb-6">Changer le mot de passe</h3>
            <form action="{{ path('app_profile_password') }}" method="post">
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-white/70 mb-2">Mot de passe actuel</label>
                        <input type="password" name="current_password" required
                               class="form-input w-full px-4 py-3 rounded-xl" placeholder="********">
                    </div>
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-white/70 mb-2">Nouveau mot de passe</label>
                            <input type="password" name="new_password" required minlength="8"
                                   class="form-input w-full px-4 py-3 rounded-xl" placeholder="********">
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-white/70 mb-2">Confirmer</label>
                            <input type="password" name="confirm_password" required minlength="8"
                                   class="form-input w-full px-4 py-3 rounded-xl" placeholder="********">
                        </div>
                    </div>
                </div>
                <div class="mt-6 flex justify-end">
                    <button type="submit" class="btn-primary px-6 py-2.5 rounded-xl text-white font-medium">
                        Mettre a jour
                    </button>
                </div>
            </form>
        </div>

        {# Danger Zone #}
        <div class="glass-card rounded-2xl p-6 border border-red-500/20">
            <h3 class="text-lg font-semibold text-red-400 mb-2">Zone de danger</h3>
            <p class="text-white/50 text-sm mb-4">Actions irreversibles sur votre compte</p>
            <button type="button" class="px-4 py-2 rounded-xl border border-red-500/50 text-red-400 hover:bg-red-500/10 transition-colors text-sm font-medium">
                Supprimer mon compte
            </button>
        </div>
    </div>
</div>
{% endblock %}
