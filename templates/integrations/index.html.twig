{% extends 'base.html.twig' %}

{% block title %}Integrations - Affilio{% endblock %}

{% block content %}
{# Header #}
<div class="mb-8">
    <h1 class="text-2xl lg:text-3xl font-bold text-slate-800">Integrations</h1>
    <p class="mt-1 text-slate-500">Connectez Affilio a vos plateformes favorites</p>
</div>

{# Available Integrations by Category #}
{% for categoryKey, category in categories %}
    {% if category.connectors|length > 0 %}
        <div class="mb-10">
            <div class="mb-4">
                <h2 class="text-xl font-semibold text-slate-800">{{ category.name }}</h2>
                <p class="text-sm text-slate-500">{{ category.description }}</p>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                {% for type, connector in category.connectors %}
                    <div class="card rounded-2xl p-6 hover:shadow-lg transition-all group">
                        <div class="flex items-start gap-4">
                            <div class="w-14 h-14 rounded-xl flex items-center justify-center
                                        {% if type == 'wordpress' %}bg-blue-100{% elseif type == 'api' %}bg-purple-100{% else %}bg-orange-100{% endif %}">
                                {% if type == 'wordpress' %}
                                    <svg class="w-8 h-8 text-blue-600" viewBox="0 0 24 24" fill="currentColor">
                                        <path d="M12 2C6.486 2 2 6.486 2 12s4.486 10 10 10 10-4.486 10-10S17.514 2 12 2zm0 19c-4.963 0-9-4.037-9-9s4.037-9 9-9 9 4.037 9 9-4.037 9-9 9z"/>
                                        <path d="M3.5 12l3.5 8.5L10 12l2 8.5L15 12l3 8.5L21.5 12"/>
                                    </svg>
                                {% elseif type == 'api' %}
                                    <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                    </svg>
                                {% else %}
                                    <svg class="w-8 h-8 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
                                    </svg>
                                {% endif %}
                            </div>
                            <div class="flex-1">
                                <div class="flex items-center gap-2 mb-1">
                                    <h3 class="font-semibold text-slate-800 text-lg">{{ connector.name }}</h3>
                                    <span class="px-2 py-0.5 rounded-full bg-emerald-100 text-emerald-600 text-xs font-medium">Actif</span>
                                </div>
                                <p class="text-sm text-slate-500 mb-4">{{ connector.description }}</p>
                                <a href="{{ path('app_site_new') }}?type={{ type }}"
                                   class="inline-flex items-center gap-2 text-sm text-primary-600 hover:text-primary-700 transition-colors">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                                    </svg>
                                    Connecter un site
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}
{% endfor %}

{# Upcoming Integrations #}
<div class="mb-10">
    <div class="mb-4">
        <h2 class="text-xl font-semibold text-slate-800">Bientot disponible</h2>
        <p class="text-sm text-slate-500">De nouvelles integrations arrivent prochainement</p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {% for integration in upcoming %}
            <div class="card rounded-2xl p-6 opacity-60">
                <div class="flex items-start gap-4">
                    <div class="w-14 h-14 rounded-xl bg-slate-100 flex items-center justify-center">
                        {% if integration.icon == 'ghost' %}
                            <svg class="w-8 h-8 text-slate-400" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12 2a9.91 9.91 0 0 0-7.07 2.93A9.91 9.91 0 0 0 2 12a9.91 9.91 0 0 0 2.93 7.07A9.91 9.91 0 0 0 12 22a9.91 9.91 0 0 0 7.07-2.93A9.91 9.91 0 0 0 22 12a9.91 9.91 0 0 0-2.93-7.07A9.91 9.91 0 0 0 12 2zm0 3c.55 0 1 .45 1 1v6c0 .55-.45 1-1 1s-1-.45-1-1V6c0-.55.45-1 1-1zm0 10c.55 0 1 .45 1 1s-.45 1-1 1-1-.45-1-1 .45-1 1-1z"/>
                            </svg>
                        {% elseif integration.icon == 'notion' %}
                            <svg class="w-8 h-8 text-slate-400" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M4 4h16v16H4V4zm2 2v12h12V6H6zm2 2h8v2H8V8zm0 4h8v2H8v-2z"/>
                            </svg>
                        {% else %}
                            <svg class="w-8 h-8 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                            </svg>
                        {% endif %}
                    </div>
                    <div class="flex-1">
                        <div class="flex items-center gap-2 mb-1">
                            <h3 class="font-semibold text-slate-800 text-lg">{{ integration.name }}</h3>
                            {% if integration.status == 'coming_soon' %}
                                <span class="px-2 py-0.5 rounded-full bg-amber-100 text-amber-600 text-xs font-medium">Bientot</span>
                            {% else %}
                                <span class="px-2 py-0.5 rounded-full bg-slate-100 text-slate-500 text-xs font-medium">Planifie</span>
                            {% endif %}
                        </div>
                        <p class="text-sm text-slate-400">{{ integration.description }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

{# Request Integration #}
<div class="card rounded-2xl p-8 text-center">
    <div class="w-16 h-16 rounded-2xl bg-primary-100 flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
    </div>
    <h3 class="text-xl font-semibold text-slate-800 mb-2">Vous ne trouvez pas votre plateforme ?</h3>
    <p class="text-slate-500 mb-6 max-w-lg mx-auto">Nous ajoutons regulierement de nouvelles integrations. Faites-nous savoir quelle plateforme vous souhaitez voir supportee.</p>
    <a href="mailto:contact@affilio.io?subject=Demande%20d%27integration" class="btn-primary inline-flex items-center gap-2 px-6 py-3 rounded-xl text-white font-medium">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
        </svg>
        Demander une integration
    </a>
</div>

{# API Documentation Teaser #}
<div class="mt-8 card rounded-2xl overflow-hidden">
    <div class="grid md:grid-cols-2 gap-0">
        <div class="p-8">
            <div class="w-12 h-12 rounded-xl bg-purple-100 flex items-center justify-center mb-4">
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
                </svg>
            </div>
            <h3 class="text-xl font-semibold text-slate-800 mb-2">API Developpeur</h3>
            <p class="text-slate-500 mb-6">Integrez Affilio directement dans vos workflows avec notre API REST. Automatisez la publication, recuperez les statistiques et gerez vos sites par programmation.</p>
            <div class="flex items-center gap-4">
                <span class="px-3 py-1 rounded-full bg-emerald-100 text-emerald-600 text-sm font-medium">REST API</span>
                <span class="px-3 py-1 rounded-full bg-blue-100 text-blue-600 text-sm font-medium">Webhooks</span>
                <span class="px-3 py-1 rounded-full bg-purple-100 text-purple-600 text-sm font-medium">OAuth 2.0</span>
            </div>
        </div>
        <div class="bg-slate-800 p-8 flex items-center">
            <pre class="text-sm text-slate-300 overflow-x-auto"><code class="language-bash">curl -X POST https://api.affilio.io/v1/publish \
  -H "Authorization: Bearer YOUR_API_KEY" \
  -H "Content-Type: application/json" \
  -d '{
    "site_id": 1,
    "title": "Mon article",
    "content": "Contenu...",
    "status": "publish"
  }'</code></pre>
        </div>
    </div>
</div>
{% endblock %}
