{% extends 'base.html.twig' %}

{% block title %}Liens d'affiliation - Affilio{% endblock %}

{% block content %}
{# Header #}
<div class="mb-8">
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
        <div>
            <h1 class="text-2xl lg:text-3xl font-bold text-slate-800">Liens d'affiliation</h1>
            <p class="text-slate-500 mt-1">Gerez tous vos liens d'affiliation</p>
        </div>

        <a href="{{ path('app_affiliate_link_new') }}" class="btn-primary inline-flex items-center gap-2 px-5 py-2.5 rounded-xl text-white font-medium">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Nouveau lien
        </a>
    </div>
</div>

{# Stats Cards #}
<div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
    <div class="stat-card p-5">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-slate-500">Total liens</p>
                <p class="text-2xl font-bold text-slate-800 mt-1">{{ links|length }}</p>
            </div>
            <div class="w-12 h-12 rounded-xl bg-blue-100 flex items-center justify-center">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
                </svg>
            </div>
        </div>
    </div>

    <div class="stat-card p-5">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-slate-500">Clics totaux</p>
                <p class="text-2xl font-bold text-slate-800 mt-1">{{ stats.totalClicks|number_format(0, ',', ' ') }}</p>
            </div>
            <div class="w-12 h-12 rounded-xl bg-purple-100 flex items-center justify-center">
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 15l-2 5L9 9l11 4-5 2zm0 0l5 5M7.188 2.239l.777 2.897M5.136 7.965l-2.898-.777M13.95 4.05l-2.122 2.122m-5.657 5.656l-2.12 2.122"/>
                </svg>
            </div>
        </div>
    </div>

    <div class="stat-card p-5">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-slate-500">Conversions</p>
                <p class="text-2xl font-bold text-slate-800 mt-1">{{ stats.conversions|number_format(0, ',', ' ') }}</p>
            </div>
            <div class="w-12 h-12 rounded-xl bg-amber-100 flex items-center justify-center">
                <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
            </div>
        </div>
    </div>

    <div class="stat-card p-5">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-slate-500">Revenus totaux</p>
                <p class="text-2xl font-bold text-primary-600 mt-1">{{ stats.earnings|number_format(2, ',', ' ') }} €</p>
            </div>
            <div class="w-12 h-12 rounded-xl bg-primary-100 flex items-center justify-center">
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
            </div>
        </div>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    {# Links List #}
    <div class="lg:col-span-2">
        {% if links|length > 0 %}
            <div class="card overflow-hidden">
                <div class="p-4 border-b border-slate-100 bg-slate-50">
                    <div class="grid grid-cols-12 gap-4 text-sm font-medium text-slate-500">
                        <div class="col-span-5">Lien</div>
                        <div class="col-span-2 text-center">Clics</div>
                        <div class="col-span-2 text-center">Conv.</div>
                        <div class="col-span-2 text-right">Revenus</div>
                        <div class="col-span-1"></div>
                    </div>
                </div>
                <div class="divide-y divide-slate-100">
                    {% for link in links %}
                        <div class="p-4 hover:bg-slate-50 transition-colors">
                            <div class="grid grid-cols-12 gap-4 items-center">
                                <div class="col-span-5">
                                    <div class="flex items-center gap-3">
                                        {% if link.status == 'active' %}
                                            <span class="w-2 h-2 rounded-full bg-emerald-500 flex-shrink-0"></span>
                                        {% else %}
                                            <span class="w-2 h-2 rounded-full bg-slate-300 flex-shrink-0"></span>
                                        {% endif %}
                                        <div class="min-w-0">
                                            <a href="{{ path('app_affiliate_link_show', {id: link.id}) }}" class="font-medium text-slate-800 hover:text-primary-600 transition-colors block truncate">
                                                {{ link.name }}
                                            </a>
                                            {% if link.program %}
                                                <span class="text-xs text-slate-400">{{ link.program.name }}</span>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-span-2 text-center">
                                    <span class="font-semibold text-slate-800">{{ link.totalClicks|number_format(0, ',', ' ') }}</span>
                                </div>
                                <div class="col-span-2 text-center">
                                    <span class="font-semibold text-slate-800">{{ link.conversions }}</span>
                                    {% if link.totalClicks > 0 %}
                                        <span class="text-xs text-slate-400 block">{{ link.conversionRate }}%</span>
                                    {% endif %}
                                </div>
                                <div class="col-span-2 text-right">
                                    <span class="font-semibold text-primary-600">{{ link.totalEarnings|number_format(2, ',', ' ') }} €</span>
                                </div>
                                <div class="col-span-1 text-right">
                                    <a href="{{ path('app_affiliate_link_show', {id: link.id}) }}" class="p-2 rounded-lg hover:bg-slate-100 text-slate-400 hover:text-slate-600 transition-colors inline-block">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% else %}
            <div class="card p-12 text-center">
                <div class="w-16 h-16 rounded-2xl bg-slate-100 flex items-center justify-center mx-auto mb-4">
                    <svg class="w-8 h-8 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
                    </svg>
                </div>
                <h3 class="text-xl font-semibold text-slate-800 mb-2">Aucun lien</h3>
                <p class="text-slate-500 mb-6">Commencez par ajouter votre premier lien d'affiliation</p>
                <a href="{{ path('app_affiliate_link_new') }}" class="btn-primary inline-flex items-center gap-2 px-6 py-3 rounded-xl text-white font-medium">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                    </svg>
                    Ajouter un lien
                </a>
            </div>
        {% endif %}
    </div>

    {# Top Performing #}
    <div class="space-y-6">
        <div class="card p-6">
            <h2 class="text-lg font-semibold text-slate-800 mb-4">Top performers</h2>
            {% if topPerforming|length > 0 %}
                <div class="space-y-3">
                    {% for link in topPerforming %}
                        <a href="{{ path('app_affiliate_link_show', {id: link.id}) }}" class="flex items-center justify-between p-3 rounded-xl hover:bg-slate-50 transition-colors group">
                            <div class="min-w-0">
                                <p class="font-medium text-slate-800 group-hover:text-primary-600 transition-colors truncate">{{ link.name }}</p>
                                <p class="text-xs text-slate-400">{{ link.totalClicks }} clics</p>
                            </div>
                            <span class="font-semibold text-primary-600 ml-2">{{ link.totalEarnings|number_format(2, ',', ' ') }} €</span>
                        </a>
                    {% endfor %}
                </div>
            {% else %}
                <p class="text-slate-500 text-sm text-center py-4">Aucune donnee disponible</p>
            {% endif %}
        </div>

        <div class="card p-6">
            <h2 class="text-lg font-semibold text-slate-800 mb-4">Actions rapides</h2>
            <div class="space-y-2">
                <a href="{{ path('app_affiliate_link_new') }}" class="flex items-center gap-3 p-3 rounded-xl hover:bg-slate-50 transition-colors group">
                    <div class="w-10 h-10 rounded-lg bg-primary-100 flex items-center justify-center group-hover:bg-primary-200 transition-colors">
                        <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                        </svg>
                    </div>
                    <div>
                        <p class="font-medium text-slate-800">Nouveau lien</p>
                        <p class="text-xs text-slate-500">Ajouter un lien d'affiliation</p>
                    </div>
                </a>
                <a href="{{ path('app_affiliate_programs') }}" class="flex items-center gap-3 p-3 rounded-xl hover:bg-slate-50 transition-colors group">
                    <div class="w-10 h-10 rounded-lg bg-slate-100 flex items-center justify-center group-hover:bg-slate-200 transition-colors">
                        <svg class="w-5 h-5 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                        </svg>
                    </div>
                    <div>
                        <p class="font-medium text-slate-800">Programmes</p>
                        <p class="text-xs text-slate-500">Gerer les programmes</p>
                    </div>
                </a>
                <a href="{{ path('app_affiliate_earnings') }}" class="flex items-center gap-3 p-3 rounded-xl hover:bg-slate-50 transition-colors group">
                    <div class="w-10 h-10 rounded-lg bg-slate-100 flex items-center justify-center group-hover:bg-slate-200 transition-colors">
                        <svg class="w-5 h-5 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                    </div>
                    <div>
                        <p class="font-medium text-slate-800">Revenus</p>
                        <p class="text-xs text-slate-500">Voir les statistiques</p>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
