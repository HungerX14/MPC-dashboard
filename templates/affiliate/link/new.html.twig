{% extends 'base.html.twig' %}

{% block title %}Nouveau lien - Affilio{% endblock %}

{% block content %}
{# Header #}
<div class="mb-8">
    <a href="{{ path('app_affiliate_links') }}" class="inline-flex items-center gap-2 text-slate-500 hover:text-slate-700 transition-colors mb-4">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        Retour aux liens
    </a>

    <h1 class="text-2xl lg:text-3xl font-bold text-slate-800">Nouveau lien d'affiliation</h1>
    <p class="text-slate-500 mt-1">Ajoutez un nouveau lien a suivre</p>
</div>

<form method="post" class="max-w-3xl">
    <div class="card p-6 mb-6">
        <h2 class="text-lg font-semibold text-slate-800 mb-4">Informations du lien</h2>

        <div class="space-y-4">
            <div>
                <label for="name" class="block text-sm font-medium text-slate-700 mb-1">Nom du lien *</label>
                <input type="text" name="name" id="name" required
                       class="form-input w-full px-4 py-2.5"
                       placeholder="Ex: Amazon - iPhone 15 Pro">
            </div>

            <div>
                <label for="url" class="block text-sm font-medium text-slate-700 mb-1">URL d'affiliation *</label>
                <input type="url" name="url" id="url" required
                       class="form-input w-full px-4 py-2.5"
                       placeholder="https://www.amazon.fr/dp/...?tag=votre-tag">
                <p class="text-xs text-slate-400 mt-1">L'URL complete avec votre identifiant d'affilie</p>
            </div>

            <div>
                <label for="destination_url" class="block text-sm font-medium text-slate-700 mb-1">URL de destination (optionnel)</label>
                <input type="url" name="destination_url" id="destination_url"
                       class="form-input w-full px-4 py-2.5"
                       placeholder="https://www.amazon.fr/dp/...">
                <p class="text-xs text-slate-400 mt-1">L'URL du produit sans votre tag (pour reference)</p>
            </div>

            <div>
                <label for="description" class="block text-sm font-medium text-slate-700 mb-1">Description</label>
                <textarea name="description" id="description" rows="2"
                          class="form-input w-full px-4 py-2.5"
                          placeholder="Description du lien..."></textarea>
            </div>
        </div>
    </div>

    <div class="card p-6 mb-6">
        <h2 class="text-lg font-semibold text-slate-800 mb-4">Association</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <label for="program_id" class="block text-sm font-medium text-slate-700 mb-1">Programme d'affiliation</label>
                <select name="program_id" id="program_id" class="form-input w-full px-4 py-2.5">
                    <option value="">Aucun programme</option>
                    {% for program in programs %}
                        <option value="{{ program.id }}" {{ app.request.query.get('program_id') == program.id ? 'selected' : '' }}>
                            {{ program.name }}
                            {% if program.network %} ({{ program.network }}){% endif %}
                        </option>
                    {% endfor %}
                </select>
            </div>

            <div>
                <label for="site_id" class="block text-sm font-medium text-slate-700 mb-1">Site associe</label>
                <select name="site_id" id="site_id" class="form-input w-full px-4 py-2.5">
                    <option value="">Aucun site</option>
                    {% for site in sites %}
                        <option value="{{ site.id }}">{{ site.name }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
    </div>

    <div class="card p-6 mb-6">
        <h2 class="text-lg font-semibold text-slate-800 mb-4">Organisation</h2>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <label for="tags" class="block text-sm font-medium text-slate-700 mb-1">Tags</label>
                <input type="text" name="tags" id="tags"
                       class="form-input w-full px-4 py-2.5"
                       placeholder="tech, smartphone, apple">
                <p class="text-xs text-slate-400 mt-1">Separ√©s par des virgules</p>
            </div>

            <div>
                <label for="status" class="block text-sm font-medium text-slate-700 mb-1">Statut</label>
                <select name="status" id="status" class="form-input w-full px-4 py-2.5">
                    <option value="active">Actif</option>
                    <option value="paused">En pause</option>
                    <option value="expired">Expire</option>
                </select>
            </div>
        </div>
    </div>

    <div class="flex items-center justify-end gap-4">
        <a href="{{ path('app_affiliate_links') }}" class="btn-secondary px-6 py-2.5 rounded-xl font-medium">
            Annuler
        </a>
        <button type="submit" class="btn-primary px-6 py-2.5 rounded-xl text-white font-medium">
            Creer le lien
        </button>
    </div>
</form>
{% endblock %}
