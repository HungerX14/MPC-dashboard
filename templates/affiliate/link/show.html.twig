{% extends 'base.html.twig' %}

{% block title %}{{ link.name }} - Affilio{% endblock %}

{% block content %}
{# Header #}
<div class="mb-8">
    <a href="{{ path('app_affiliate_links') }}" class="inline-flex items-center gap-2 text-slate-500 hover:text-slate-700 transition-colors mb-4">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        Retour aux liens
    </a>

    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
        <div>
            <div class="flex items-center gap-3 mb-1">
                <h1 class="text-2xl lg:text-3xl font-bold text-slate-800">{{ link.name }}</h1>
                {% if link.status == 'active' %}
                    <span class="badge-success px-3 py-1 rounded-full text-xs font-medium">Actif</span>
                {% elseif link.status == 'paused' %}
                    <span class="badge-warning px-3 py-1 rounded-full text-xs font-medium">En pause</span>
                {% else %}
                    <span class="badge-danger px-3 py-1 rounded-full text-xs font-medium">Expire</span>
                {% endif %}
            </div>
            {% if link.program %}
                <p class="text-slate-500">{{ link.program.name }}</p>
            {% endif %}
        </div>

        <div class="flex items-center gap-3">
            <a href="{{ link.url }}" target="_blank" class="btn-secondary flex items-center gap-2 px-4 py-2.5 rounded-xl">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                </svg>
                Ouvrir le lien
            </a>
            <a href="{{ path('app_affiliate_link_edit', {id: link.id}) }}" class="btn-secondary flex items-center gap-2 px-4 py-2.5 rounded-xl">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
                Modifier
            </a>
        </div>
    </div>
</div>

{# Stats Cards #}
<div class="grid grid-cols-1 md:grid-cols-5 gap-4 mb-8">
    <div class="stat-card p-5">
        <p class="text-sm text-slate-500">Clics totaux</p>
        <p class="text-2xl font-bold text-slate-800 mt-1">{{ link.totalClicks|number_format(0, ',', ' ') }}</p>
    </div>

    <div class="stat-card p-5">
        <p class="text-sm text-slate-500">Clics uniques</p>
        <p class="text-2xl font-bold text-slate-800 mt-1">{{ link.uniqueClicks|number_format(0, ',', ' ') }}</p>
    </div>

    <div class="stat-card p-5">
        <p class="text-sm text-slate-500">Conversions</p>
        <p class="text-2xl font-bold text-slate-800 mt-1">{{ link.conversions }}</p>
    </div>

    <div class="stat-card p-5">
        <p class="text-sm text-slate-500">Taux conversion</p>
        <p class="text-2xl font-bold text-slate-800 mt-1">{{ link.conversionRate }}%</p>
    </div>

    <div class="stat-card p-5">
        <p class="text-sm text-slate-500">Revenus</p>
        <p class="text-2xl font-bold text-primary-600 mt-1">{{ link.totalEarnings|number_format(2, ',', ' ') }} â‚¬</p>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    {# Main Content #}
    <div class="lg:col-span-2 space-y-6">
        {# Chart #}
        <div class="card p-6">
            <h2 class="text-lg font-semibold text-slate-800 mb-4">Clics des 30 derniers jours</h2>
            {% if clicksByDay|length > 0 %}
                <div class="h-48 flex items-end justify-between gap-1">
                    {% set maxClicks = max(clicksByDay|values|default([1])) %}
                    {% for date, clicks in clicksByDay %}
                        <div class="flex-1 flex flex-col items-center group">
                            <div class="w-full bg-primary-500 rounded-t transition-all hover:bg-primary-600"
                                 style="height: {{ maxClicks > 0 ? (clicks / maxClicks * 100) : 0 }}%"
                                 title="{{ date }}: {{ clicks }} clics"></div>
                        </div>
                    {% endfor %}
                </div>
                <div class="flex justify-between mt-2 text-xs text-slate-400">
                    <span>Il y a 30 jours</span>
                    <span>Aujourd'hui</span>
                </div>
            {% else %}
                <div class="h-48 flex items-center justify-center text-slate-400">
                    Aucune donnee disponible
                </div>
            {% endif %}
        </div>

        {# Recent Clicks #}
        <div class="card overflow-hidden">
            <div class="p-6 border-b border-slate-100">
                <h2 class="text-lg font-semibold text-slate-800">Derniers clics</h2>
            </div>
            {% if recentClicks|length > 0 %}
                <div class="divide-y divide-slate-100 max-h-96 overflow-y-auto">
                    {% for click in recentClicks %}
                        <div class="p-4 hover:bg-slate-50 transition-colors">
                            <div class="flex items-center justify-between">
                                <div class="flex items-center gap-3">
                                    <div class="w-8 h-8 rounded-lg bg-slate-100 flex items-center justify-center">
                                        {% if click.device == 'mobile' %}
                                            <svg class="w-4 h-4 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                                            </svg>
                                        {% elseif click.device == 'tablet' %}
                                            <svg class="w-4 h-4 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                                            </svg>
                                        {% else %}
                                            <svg class="w-4 h-4 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                                            </svg>
                                        {% endif %}
                                    </div>
                                    <div>
                                        <p class="font-medium text-slate-800 text-sm">
                                            {{ click.country ?? 'Inconnu' }}
                                            {% if click.city %} - {{ click.city }}{% endif %}
                                        </p>
                                        <p class="text-xs text-slate-400">
                                            {{ click.browser ?? 'Navigateur inconnu' }}
                                            {% if click.os %} / {{ click.os }}{% endif %}
                                        </p>
                                    </div>
                                </div>
                                <div class="text-right">
                                    <p class="text-sm text-slate-600">{{ click.clickedAt|date('d/m/Y H:i') }}</p>
                                    {% if click.isUnique %}
                                        <span class="text-xs text-emerald-500">Unique</span>
                                    {% endif %}
                                    {% if click.isConversion %}
                                        <span class="text-xs text-primary-500 ml-1">Conversion</span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="p-8 text-center">
                    <p class="text-slate-500">Aucun clic enregistre</p>
                </div>
            {% endif %}
        </div>
    </div>

    {# Sidebar #}
    <div class="space-y-6">
        {# Link Info #}
        <div class="card p-6">
            <h2 class="text-lg font-semibold text-slate-800 mb-4">Informations</h2>
            <div class="space-y-4">
                <div>
                    <p class="text-sm text-slate-500">Code court</p>
                    <div class="flex items-center gap-2 mt-1">
                        <code class="px-2 py-1 rounded bg-slate-100 text-slate-700 text-sm font-mono">{{ link.shortCode }}</code>
                        <form action="{{ path('app_affiliate_link_regenerate', {id: link.id}) }}" method="post" class="inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('regenerate' ~ link.id) }}">
                            <button type="submit" class="text-slate-400 hover:text-slate-600 transition-colors" title="Regenerer">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                                </svg>
                            </button>
                        </form>
                    </div>
                </div>

                <div>
                    <p class="text-sm text-slate-500">URL d'affiliation</p>
                    <p class="text-sm text-slate-700 break-all mt-1">{{ link.url }}</p>
                </div>

                {% if link.destinationUrl %}
                    <div>
                        <p class="text-sm text-slate-500">URL de destination</p>
                        <p class="text-sm text-slate-700 break-all mt-1">{{ link.destinationUrl }}</p>
                    </div>
                {% endif %}

                {% if link.program %}
                    <div>
                        <p class="text-sm text-slate-500">Programme</p>
                        <a href="{{ path('app_affiliate_program_show', {id: link.program.id}) }}" class="text-primary-600 hover:text-primary-700 font-medium">
                            {{ link.program.name }}
                        </a>
                    </div>
                {% endif %}

                {% if link.site %}
                    <div>
                        <p class="text-sm text-slate-500">Site</p>
                        <a href="{{ path('app_site_show', {id: link.site.id}) }}" class="text-primary-600 hover:text-primary-700 font-medium">
                            {{ link.site.name }}
                        </a>
                    </div>
                {% endif %}

                <div>
                    <p class="text-sm text-slate-500">Cree le</p>
                    <p class="font-medium text-slate-800">{{ link.createdAt|date('d/m/Y H:i') }}</p>
                </div>

                {% if link.lastClickAt %}
                    <div>
                        <p class="text-sm text-slate-500">Dernier clic</p>
                        <p class="font-medium text-slate-800">{{ link.lastClickAt|date('d/m/Y H:i') }}</p>
                    </div>
                {% endif %}
            </div>
        </div>

        {# Tags #}
        {% if link.tags %}
            <div class="card p-6">
                <h2 class="text-lg font-semibold text-slate-800 mb-3">Tags</h2>
                <div class="flex flex-wrap gap-2">
                    {% for tag in link.tags %}
                        <span class="px-3 py-1 rounded-lg bg-slate-100 text-slate-600 text-sm">{{ tag }}</span>
                    {% endfor %}
                </div>
            </div>
        {% endif %}

        {# Device Stats #}
        {% if deviceStats|length > 0 %}
            <div class="card p-6">
                <h2 class="text-lg font-semibold text-slate-800 mb-4">Appareils</h2>
                <div class="space-y-3">
                    {% set totalDeviceClicks = deviceStats|reduce((carry, v) => carry + v, 0) %}
                    {% for device, count in deviceStats %}
                        <div>
                            <div class="flex justify-between text-sm mb-1">
                                <span class="text-slate-600 capitalize">{{ device }}</span>
                                <span class="text-slate-800 font-medium">{{ count }}</span>
                            </div>
                            <div class="h-2 bg-slate-100 rounded-full overflow-hidden">
                                <div class="h-full bg-primary-500 rounded-full" style="width: {{ (count / totalDeviceClicks * 100)|round }}%"></div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endif %}

        {# Country Stats #}
        {% if countryStats|length > 0 %}
            <div class="card p-6">
                <h2 class="text-lg font-semibold text-slate-800 mb-4">Pays</h2>
                <div class="space-y-2">
                    {% for country, count in countryStats %}
                        <div class="flex justify-between items-center">
                            <span class="text-slate-600">{{ country }}</span>
                            <span class="font-medium text-slate-800">{{ count }}</span>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% endif %}

        {# Danger Zone #}
        <div class="card p-6 border-red-200">
            <h2 class="text-lg font-semibold text-red-600 mb-3">Zone de danger</h2>
            <form action="{{ path('app_affiliate_link_delete', {id: link.id}) }}" method="post" onsubmit="return confirm('Etes-vous sur de vouloir supprimer ce lien ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ link.id) }}">
                <button type="submit" class="w-full px-4 py-2 rounded-lg bg-red-50 text-red-600 hover:bg-red-100 transition-colors font-medium text-sm">
                    Supprimer le lien
                </button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
