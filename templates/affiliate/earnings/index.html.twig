{% extends 'base.html.twig' %}

{% block title %}Revenus - Affilio{% endblock %}

{% block content %}
{# Header #}
<div class="mb-8">
    <h1 class="text-2xl lg:text-3xl font-bold text-slate-800">Revenus</h1>
    <p class="text-slate-500 mt-1">Suivez vos performances et vos gains</p>
</div>

{# Main Stats Cards #}
<div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
    <div class="stat-card p-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-slate-500">Revenus totaux</p>
                <p class="text-3xl font-bold text-primary-600 mt-1">{{ stats.earnings|number_format(2, ',', ' ') }} €</p>
            </div>
            <div class="w-14 h-14 rounded-xl bg-primary-100 flex items-center justify-center">
                <svg class="w-7 h-7 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
            </div>
        </div>
    </div>

    <div class="stat-card p-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-slate-500">Clics totaux</p>
                <p class="text-3xl font-bold text-slate-800 mt-1">{{ stats.totalClicks|number_format(0, ',', ' ') }}</p>
            </div>
            <div class="w-14 h-14 rounded-xl bg-purple-100 flex items-center justify-center">
                <svg class="w-7 h-7 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 15l-2 5L9 9l11 4-5 2zm0 0l5 5M7.188 2.239l.777 2.897M5.136 7.965l-2.898-.777M13.95 4.05l-2.122 2.122m-5.657 5.656l-2.12 2.122"/>
                </svg>
            </div>
        </div>
    </div>

    <div class="stat-card p-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-slate-500">Conversions</p>
                <p class="text-3xl font-bold text-slate-800 mt-1">{{ stats.conversions|number_format(0, ',', ' ') }}</p>
            </div>
            <div class="w-14 h-14 rounded-xl bg-amber-100 flex items-center justify-center">
                <svg class="w-7 h-7 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
            </div>
        </div>
    </div>

    <div class="stat-card p-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-slate-500">Taux de conversion</p>
                <p class="text-3xl font-bold text-slate-800 mt-1">
                    {{ stats.uniqueClicks > 0 ? ((stats.conversions / stats.uniqueClicks) * 100)|number_format(2) : '0' }}%
                </p>
            </div>
            <div class="w-14 h-14 rounded-xl bg-emerald-100 flex items-center justify-center">
                <svg class="w-7 h-7 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                </svg>
            </div>
        </div>
    </div>
</div>

{# Period Stats #}
<div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
    <div class="card p-5">
        <div class="flex items-center gap-4">
            <div class="w-12 h-12 rounded-xl bg-blue-100 flex items-center justify-center">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
            </div>
            <div>
                <p class="text-sm text-slate-500">Aujourd'hui</p>
                <p class="text-xl font-bold text-slate-800">{{ periodStats.today }} clics</p>
            </div>
        </div>
    </div>

    <div class="card p-5">
        <div class="flex items-center gap-4">
            <div class="w-12 h-12 rounded-xl bg-indigo-100 flex items-center justify-center">
                <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
            </div>
            <div>
                <p class="text-sm text-slate-500">Cette semaine</p>
                <p class="text-xl font-bold text-slate-800">{{ periodStats.week }} clics</p>
            </div>
        </div>
    </div>

    <div class="card p-5">
        <div class="flex items-center gap-4">
            <div class="w-12 h-12 rounded-xl bg-pink-100 flex items-center justify-center">
                <svg class="w-6 h-6 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                </svg>
            </div>
            <div>
                <p class="text-sm text-slate-500">Ce mois</p>
                <p class="text-xl font-bold text-slate-800">{{ periodStats.month }} clics</p>
            </div>
        </div>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    {# Main Content #}
    <div class="lg:col-span-2 space-y-6">
        {# Chart #}
        <div class="card p-6">
            <h2 class="text-lg font-semibold text-slate-800 mb-4">Evolution des clics (30 jours)</h2>
            {% if clicksByDay|length > 0 %}
                <div class="h-64 flex items-end justify-between gap-1">
                    {% set maxClicks = 1 %}
                    {% for clicks in clicksByDay %}
                        {% if clicks > maxClicks %}
                            {% set maxClicks = clicks %}
                        {% endif %}
                    {% endfor %}
                    {% for date, clicks in clicksByDay %}
                        <div class="flex-1 flex flex-col items-center group relative">
                            <div class="absolute bottom-full mb-2 hidden group-hover:block bg-slate-800 text-white text-xs px-2 py-1 rounded whitespace-nowrap z-10">
                                {{ date }}: {{ clicks }} clics
                            </div>
                            <div class="w-full bg-primary-500 rounded-t transition-all hover:bg-primary-600"
                                 style="height: {{ maxClicks > 0 ? (clicks / maxClicks * 100) : 0 }}%; min-height: {% if clicks > 0 %}4px{% else %}0{% endif %}"></div>
                        </div>
                    {% endfor %}
                </div>
                <div class="flex justify-between mt-2 text-xs text-slate-400">
                    <span>Il y a 30 jours</span>
                    <span>Aujourd'hui</span>
                </div>
            {% else %}
                <div class="h-64 flex items-center justify-center text-slate-400">
                    Aucune donnee disponible
                </div>
            {% endif %}
        </div>

        {# Performance by Program #}
        <div class="card overflow-hidden">
            <div class="p-6 border-b border-slate-100">
                <h2 class="text-lg font-semibold text-slate-800">Performance par programme</h2>
            </div>
            {% if programStats|length > 0 %}
                <div class="divide-y divide-slate-100">
                    {% for stat in programStats %}
                        <div class="p-4 hover:bg-slate-50 transition-colors">
                            <div class="flex items-center justify-between">
                                <div class="flex items-center gap-3">
                                    <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-primary-400 to-primary-600 flex items-center justify-center text-white font-bold">
                                        {{ stat.program.name|first|upper }}
                                    </div>
                                    <div>
                                        <a href="{{ path('app_affiliate_program_show', {id: stat.program.id}) }}" class="font-medium text-slate-800 hover:text-primary-600 transition-colors">
                                            {{ stat.program.name }}
                                        </a>
                                        <p class="text-xs text-slate-400">{{ stat.linkCount }} liens</p>
                                    </div>
                                </div>
                                <div class="flex items-center gap-6">
                                    <div class="text-right">
                                        <p class="font-semibold text-slate-800">{{ stat.clicks|number_format(0, ',', ' ') }}</p>
                                        <p class="text-xs text-slate-400">clics</p>
                                    </div>
                                    <div class="text-right">
                                        <p class="font-semibold text-slate-800">{{ stat.conversions }}</p>
                                        <p class="text-xs text-slate-400">conv.</p>
                                    </div>
                                    <div class="text-right min-w-[80px]">
                                        <p class="font-semibold text-primary-600">{{ stat.earnings|number_format(2, ',', ' ') }} €</p>
                                        <p class="text-xs text-slate-400">revenus</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="p-8 text-center">
                    <p class="text-slate-500">Aucun programme avec des donnees</p>
                </div>
            {% endif %}
        </div>
    </div>

    {# Sidebar #}
    <div class="space-y-6">
        {# Top Earning Links #}
        <div class="card p-6">
            <h2 class="text-lg font-semibold text-slate-800 mb-4">Meilleurs liens</h2>
            {% if topEarningLinks|length > 0 %}
                <div class="space-y-3">
                    {% for link in topEarningLinks %}
                        <a href="{{ path('app_affiliate_link_show', {id: link.id}) }}" class="flex items-center justify-between p-3 rounded-xl hover:bg-slate-50 transition-colors group">
                            <div class="min-w-0">
                                <p class="font-medium text-slate-800 group-hover:text-primary-600 transition-colors truncate">{{ link.name }}</p>
                                <p class="text-xs text-slate-400">{{ link.totalClicks }} clics</p>
                            </div>
                            <span class="font-semibold text-primary-600 ml-2 whitespace-nowrap">{{ link.totalEarnings|number_format(2, ',', ' ') }} €</span>
                        </a>
                    {% endfor %}
                </div>
            {% else %}
                <p class="text-slate-500 text-sm text-center py-4">Aucun lien avec des revenus</p>
            {% endif %}
        </div>

        {# Recent Clicks #}
        <div class="card p-6">
            <h2 class="text-lg font-semibold text-slate-800 mb-4">Derniers clics</h2>
            {% if recentClicks|length > 0 %}
                <div class="space-y-3">
                    {% for click in recentClicks|slice(0, 10) %}
                        <div class="flex items-center justify-between p-2 rounded-lg hover:bg-slate-50 transition-colors">
                            <div class="flex items-center gap-2 min-w-0">
                                <div class="w-8 h-8 rounded-lg bg-slate-100 flex items-center justify-center flex-shrink-0">
                                    {% if click.device == 'mobile' %}
                                        <svg class="w-4 h-4 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                                        </svg>
                                    {% else %}
                                        <svg class="w-4 h-4 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                                        </svg>
                                    {% endif %}
                                </div>
                                <div class="min-w-0">
                                    <p class="text-sm font-medium text-slate-800 truncate">{{ click.link.name }}</p>
                                    <p class="text-xs text-slate-400">{{ click.country ?? 'Inconnu' }}</p>
                                </div>
                            </div>
                            <span class="text-xs text-slate-400 whitespace-nowrap ml-2">{{ click.clickedAt|date('H:i') }}</span>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <p class="text-slate-500 text-sm text-center py-4">Aucun clic recent</p>
            {% endif %}
        </div>

        {# Quick Actions #}
        <div class="card p-6">
            <h2 class="text-lg font-semibold text-slate-800 mb-4">Actions rapides</h2>
            <div class="space-y-2">
                <a href="{{ path('app_affiliate_link_new') }}" class="flex items-center gap-3 p-3 rounded-xl hover:bg-slate-50 transition-colors group">
                    <div class="w-10 h-10 rounded-lg bg-primary-100 flex items-center justify-center group-hover:bg-primary-200 transition-colors">
                        <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                        </svg>
                    </div>
                    <div>
                        <p class="font-medium text-slate-800">Nouveau lien</p>
                        <p class="text-xs text-slate-500">Ajouter un lien</p>
                    </div>
                </a>
                <a href="{{ path('app_affiliate_program_new') }}" class="flex items-center gap-3 p-3 rounded-xl hover:bg-slate-50 transition-colors group">
                    <div class="w-10 h-10 rounded-lg bg-slate-100 flex items-center justify-center group-hover:bg-slate-200 transition-colors">
                        <svg class="w-5 h-5 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                        </svg>
                    </div>
                    <div>
                        <p class="font-medium text-slate-800">Nouveau programme</p>
                        <p class="text-xs text-slate-500">Ajouter un programme</p>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
