{% extends 'base.html.twig' %}

{% block title %}{{ program.name }} - Affilio{% endblock %}

{% block content %}
{# Header #}
<div class="mb-8">
    <a href="{{ path('app_affiliate_programs') }}" class="inline-flex items-center gap-2 text-slate-500 hover:text-slate-700 transition-colors mb-4">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        Retour aux programmes
    </a>

    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
        <div class="flex items-center gap-4">
            <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-primary-400 to-primary-600 flex items-center justify-center text-white font-bold text-xl">
                {{ program.name|first|upper }}
            </div>
            <div>
                <div class="flex items-center gap-3">
                    <h1 class="text-2xl lg:text-3xl font-bold text-slate-800">{{ program.name }}</h1>
                    {% if program.status == 'active' %}
                        <span class="badge-success px-3 py-1 rounded-full text-xs font-medium">Actif</span>
                    {% elseif program.status == 'paused' %}
                        <span class="badge-warning px-3 py-1 rounded-full text-xs font-medium">En pause</span>
                    {% else %}
                        <span class="badge-danger px-3 py-1 rounded-full text-xs font-medium">Termine</span>
                    {% endif %}
                </div>
                {% if program.network %}
                    <p class="text-slate-500">{{ program.network }}</p>
                {% endif %}
            </div>
        </div>

        <div class="flex items-center gap-3">
            {% if program.dashboardUrl %}
                <a href="{{ program.dashboardUrl }}" target="_blank" class="btn-secondary flex items-center gap-2 px-4 py-2.5 rounded-xl">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                    </svg>
                    Dashboard
                </a>
            {% endif %}
            <a href="{{ path('app_affiliate_program_edit', {id: program.id}) }}" class="btn-secondary flex items-center gap-2 px-4 py-2.5 rounded-xl">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
                Modifier
            </a>
            <a href="{{ path('app_affiliate_link_new') }}?program_id={{ program.id }}" class="btn-primary flex items-center gap-2 px-4 py-2.5 rounded-xl text-white font-medium">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
                Nouveau lien
            </a>
        </div>
    </div>
</div>

{# Stats Cards #}
<div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
    <div class="stat-card p-5">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-slate-500">Liens</p>
                <p class="text-2xl font-bold text-slate-800 mt-1">{{ stats.linkCount }}</p>
            </div>
            <div class="w-12 h-12 rounded-xl bg-blue-100 flex items-center justify-center">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/>
                </svg>
            </div>
        </div>
    </div>

    <div class="stat-card p-5">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-slate-500">Clics</p>
                <p class="text-2xl font-bold text-slate-800 mt-1">{{ stats.totalClicks|number_format(0, ',', ' ') }}</p>
            </div>
            <div class="w-12 h-12 rounded-xl bg-purple-100 flex items-center justify-center">
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 15l-2 5L9 9l11 4-5 2zm0 0l5 5M7.188 2.239l.777 2.897M5.136 7.965l-2.898-.777M13.95 4.05l-2.122 2.122m-5.657 5.656l-2.12 2.122"/>
                </svg>
            </div>
        </div>
    </div>

    <div class="stat-card p-5">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-slate-500">Conversions</p>
                <p class="text-2xl font-bold text-slate-800 mt-1">{{ stats.totalConversions|number_format(0, ',', ' ') }}</p>
            </div>
            <div class="w-12 h-12 rounded-xl bg-amber-100 flex items-center justify-center">
                <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
            </div>
        </div>
    </div>

    <div class="stat-card p-5">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-slate-500">Revenus</p>
                <p class="text-2xl font-bold text-primary-600 mt-1">{{ stats.totalEarnings|number_format(2, ',', ' ') }} {{ program.currency }}</p>
            </div>
            <div class="w-12 h-12 rounded-xl bg-primary-100 flex items-center justify-center">
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
            </div>
        </div>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    {# Program Details #}
    <div class="lg:col-span-2 space-y-6">
        {# Description #}
        {% if program.description %}
            <div class="card p-6">
                <h2 class="text-lg font-semibold text-slate-800 mb-3">Description</h2>
                <p class="text-slate-600">{{ program.description }}</p>
            </div>
        {% endif %}

        {# Links List #}
        <div class="card overflow-hidden">
            <div class="p-6 border-b border-slate-100">
                <div class="flex items-center justify-between">
                    <h2 class="text-lg font-semibold text-slate-800">Liens d'affiliation</h2>
                    <a href="{{ path('app_affiliate_link_new') }}?program_id={{ program.id }}" class="text-sm text-primary-600 hover:text-primary-700 font-medium">
                        + Ajouter un lien
                    </a>
                </div>
            </div>

            {% if links|length > 0 %}
                <div class="divide-y divide-slate-100">
                    {% for link in links %}
                        <div class="p-4 hover:bg-slate-50 transition-colors">
                            <div class="flex items-center justify-between">
                                <div class="flex-1 min-w-0">
                                    <div class="flex items-center gap-2 mb-1">
                                        <a href="{{ path('app_affiliate_link_show', {id: link.id}) }}" class="font-medium text-slate-800 hover:text-primary-600 transition-colors">
                                            {{ link.name }}
                                        </a>
                                        {% if link.status == 'active' %}
                                            <span class="w-2 h-2 rounded-full bg-emerald-500"></span>
                                        {% else %}
                                            <span class="w-2 h-2 rounded-full bg-slate-300"></span>
                                        {% endif %}
                                    </div>
                                    <p class="text-sm text-slate-500 truncate">{{ link.url }}</p>
                                </div>
                                <div class="flex items-center gap-6 ml-4">
                                    <div class="text-right">
                                        <p class="font-semibold text-slate-800">{{ link.totalClicks }}</p>
                                        <p class="text-xs text-slate-400">clics</p>
                                    </div>
                                    <div class="text-right">
                                        <p class="font-semibold text-primary-600">{{ link.totalEarnings|number_format(2, ',', ' ') }} â‚¬</p>
                                        <p class="text-xs text-slate-400">revenus</p>
                                    </div>
                                    <a href="{{ path('app_affiliate_link_show', {id: link.id}) }}" class="p-2 rounded-lg hover:bg-slate-100 text-slate-400 hover:text-slate-600 transition-colors">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="p-8 text-center">
                    <p class="text-slate-500 mb-4">Aucun lien pour ce programme</p>
                    <a href="{{ path('app_affiliate_link_new') }}?program_id={{ program.id }}" class="btn-primary inline-flex items-center gap-2 px-4 py-2 rounded-lg text-white text-sm">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                        </svg>
                        Creer un lien
                    </a>
                </div>
            {% endif %}
        </div>
    </div>

    {# Sidebar #}
    <div class="space-y-6">
        {# Program Info #}
        <div class="card p-6">
            <h2 class="text-lg font-semibold text-slate-800 mb-4">Informations</h2>
            <div class="space-y-4">
                {% if program.commissionRate %}
                    <div>
                        <p class="text-sm text-slate-500">Commission</p>
                        <p class="font-semibold text-primary-600">{{ program.formattedCommission }}</p>
                    </div>
                {% endif %}

                {% if program.cookieDuration %}
                    <div>
                        <p class="text-sm text-slate-500">Duree du cookie</p>
                        <p class="font-medium text-slate-800">{{ program.cookieDuration }} jours</p>
                    </div>
                {% endif %}

                {% if program.category %}
                    <div>
                        <p class="text-sm text-slate-500">Categorie</p>
                        <span class="inline-block px-2 py-1 rounded-lg bg-slate-100 text-slate-600 text-sm">{{ program.category }}</span>
                    </div>
                {% endif %}

                <div>
                    <p class="text-sm text-slate-500">Ajoute le</p>
                    <p class="font-medium text-slate-800">{{ program.createdAt|date('d/m/Y') }}</p>
                </div>
            </div>
        </div>

        {# Quick Links #}
        <div class="card p-6">
            <h2 class="text-lg font-semibold text-slate-800 mb-4">Actions rapides</h2>
            <div class="space-y-2">
                {% if program.website %}
                    <a href="{{ program.website }}" target="_blank" class="flex items-center gap-3 p-3 rounded-xl hover:bg-slate-50 transition-colors group">
                        <div class="w-10 h-10 rounded-lg bg-slate-100 flex items-center justify-center group-hover:bg-slate-200 transition-colors">
                            <svg class="w-5 h-5 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
                            </svg>
                        </div>
                        <div>
                            <p class="font-medium text-slate-800">Site web</p>
                            <p class="text-xs text-slate-500">Visiter le site</p>
                        </div>
                    </a>
                {% endif %}

                {% if program.dashboardUrl %}
                    <a href="{{ program.dashboardUrl }}" target="_blank" class="flex items-center gap-3 p-3 rounded-xl hover:bg-slate-50 transition-colors group">
                        <div class="w-10 h-10 rounded-lg bg-slate-100 flex items-center justify-center group-hover:bg-slate-200 transition-colors">
                            <svg class="w-5 h-5 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                            </svg>
                        </div>
                        <div>
                            <p class="font-medium text-slate-800">Dashboard</p>
                            <p class="text-xs text-slate-500">Acceder au tableau de bord</p>
                        </div>
                    </a>
                {% endif %}
            </div>
        </div>

        {# Notes #}
        {% if program.notes %}
            <div class="card p-6">
                <h2 class="text-lg font-semibold text-slate-800 mb-3">Notes</h2>
                <p class="text-slate-600 text-sm">{{ program.notes|nl2br }}</p>
            </div>
        {% endif %}

        {# Danger Zone #}
        <div class="card p-6 border-red-200">
            <h2 class="text-lg font-semibold text-red-600 mb-3">Zone de danger</h2>
            <p class="text-sm text-slate-600 mb-4">La suppression du programme supprimera egalement tous les liens associes.</p>
            <form action="{{ path('app_affiliate_program_delete', {id: program.id}) }}" method="post" onsubmit="return confirm('Etes-vous sur de vouloir supprimer ce programme ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ program.id) }}">
                <button type="submit" class="w-full px-4 py-2 rounded-lg bg-red-50 text-red-600 hover:bg-red-100 transition-colors font-medium text-sm">
                    Supprimer le programme
                </button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
