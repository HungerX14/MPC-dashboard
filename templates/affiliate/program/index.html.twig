{% extends 'base.html.twig' %}

{% block title %}Programmes d'affiliation - Affilio{% endblock %}

{% block content %}
{# Header #}
<div class="mb-8">
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
        <div>
            <h1 class="text-2xl lg:text-3xl font-bold text-slate-800">Programmes d'affiliation</h1>
            <p class="text-slate-500 mt-1">Gerez vos programmes partenaires</p>
        </div>

        <a href="{{ path('app_affiliate_program_new') }}" class="btn-primary inline-flex items-center gap-2 px-5 py-2.5 rounded-xl text-white font-medium">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Nouveau programme
        </a>
    </div>
</div>

{# Stats Cards #}
<div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
    <div class="stat-card p-5">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-slate-500">Total programmes</p>
                <p class="text-2xl font-bold text-slate-800 mt-1">{{ programs|length }}</p>
            </div>
            <div class="w-12 h-12 rounded-xl bg-primary-100 flex items-center justify-center">
                <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
            </div>
        </div>
    </div>

    <div class="stat-card p-5">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-slate-500">Actifs</p>
                <p class="text-2xl font-bold text-emerald-600 mt-1">{{ programs|filter(p => p.status == 'active')|length }}</p>
            </div>
            <div class="w-12 h-12 rounded-xl bg-emerald-100 flex items-center justify-center">
                <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
            </div>
        </div>
    </div>

    <div class="stat-card p-5">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-slate-500">Reseaux</p>
                <p class="text-2xl font-bold text-slate-800 mt-1">{{ networkStats|length }}</p>
            </div>
            <div class="w-12 h-12 rounded-xl bg-blue-100 flex items-center justify-center">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
                </svg>
            </div>
        </div>
    </div>

    <div class="stat-card p-5">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-slate-500">Categories</p>
                <p class="text-2xl font-bold text-slate-800 mt-1">{{ categoryStats|length }}</p>
            </div>
            <div class="w-12 h-12 rounded-xl bg-purple-100 flex items-center justify-center">
                <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                </svg>
            </div>
        </div>
    </div>
</div>

{# Filters #}
<div class="card p-4 mb-6">
    <div class="flex items-center gap-2">
        <span class="text-sm text-slate-500">Filtrer par statut:</span>
        <a href="{{ path('app_affiliate_programs') }}"
           class="px-3 py-1.5 rounded-lg text-sm font-medium transition-colors {{ currentStatus is null ? 'bg-primary-500 text-white' : 'bg-slate-100 text-slate-600 hover:bg-slate-200' }}">
            Tous
        </a>
        <a href="{{ path('app_affiliate_programs', {status: 'active'}) }}"
           class="px-3 py-1.5 rounded-lg text-sm font-medium transition-colors {{ currentStatus == 'active' ? 'bg-primary-500 text-white' : 'bg-slate-100 text-slate-600 hover:bg-slate-200' }}">
            Actifs
        </a>
        <a href="{{ path('app_affiliate_programs', {status: 'paused'}) }}"
           class="px-3 py-1.5 rounded-lg text-sm font-medium transition-colors {{ currentStatus == 'paused' ? 'bg-primary-500 text-white' : 'bg-slate-100 text-slate-600 hover:bg-slate-200' }}">
            En pause
        </a>
        <a href="{{ path('app_affiliate_programs', {status: 'ended'}) }}"
           class="px-3 py-1.5 rounded-lg text-sm font-medium transition-colors {{ currentStatus == 'ended' ? 'bg-primary-500 text-white' : 'bg-slate-100 text-slate-600 hover:bg-slate-200' }}">
            Termines
        </a>
    </div>
</div>

{# Programs List #}
{% if programs|length > 0 %}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for program in programs %}
            <div class="card p-6 hover:shadow-lg transition-shadow">
                <div class="flex items-start justify-between mb-4">
                    <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-primary-400 to-primary-600 flex items-center justify-center text-white font-bold text-lg">
                        {{ program.name|first|upper }}
                    </div>
                    {% if program.status == 'active' %}
                        <span class="badge-success px-2 py-1 rounded-full text-xs font-medium">Actif</span>
                    {% elseif program.status == 'paused' %}
                        <span class="badge-warning px-2 py-1 rounded-full text-xs font-medium">En pause</span>
                    {% else %}
                        <span class="badge-danger px-2 py-1 rounded-full text-xs font-medium">Termine</span>
                    {% endif %}
                </div>

                <h3 class="text-lg font-semibold text-slate-800 mb-1">
                    <a href="{{ path('app_affiliate_program_show', {id: program.id}) }}" class="hover:text-primary-600 transition-colors">
                        {{ program.name }}
                    </a>
                </h3>

                {% if program.network %}
                    <p class="text-sm text-slate-500 mb-3">{{ program.network }}</p>
                {% endif %}

                {% if program.description %}
                    <p class="text-sm text-slate-600 mb-4 line-clamp-2">{{ program.description }}</p>
                {% endif %}

                <div class="flex items-center justify-between pt-4 border-t border-slate-100">
                    <div>
                        {% if program.commissionRate %}
                            <span class="text-lg font-bold text-primary-600">{{ program.formattedCommission }}</span>
                            <span class="text-xs text-slate-400 block">Commission</span>
                        {% endif %}
                    </div>
                    <div class="flex items-center gap-2">
                        {% if program.website %}
                            <a href="{{ program.website }}" target="_blank" class="p-2 rounded-lg hover:bg-slate-100 text-slate-400 hover:text-slate-600 transition-colors" title="Site web">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                                </svg>
                            </a>
                        {% endif %}
                        <a href="{{ path('app_affiliate_program_show', {id: program.id}) }}" class="p-2 rounded-lg hover:bg-slate-100 text-slate-400 hover:text-slate-600 transition-colors" title="Voir">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% else %}
    <div class="card p-12 text-center">
        <div class="w-16 h-16 rounded-2xl bg-slate-100 flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
            </svg>
        </div>
        <h3 class="text-xl font-semibold text-slate-800 mb-2">Aucun programme</h3>
        <p class="text-slate-500 mb-6">Commencez par ajouter votre premier programme d'affiliation</p>
        <a href="{{ path('app_affiliate_program_new') }}" class="btn-primary inline-flex items-center gap-2 px-6 py-3 rounded-xl text-white font-medium">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Ajouter un programme
        </a>
    </div>
{% endif %}
{% endblock %}
