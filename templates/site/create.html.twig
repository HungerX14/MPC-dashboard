{% extends 'base.html.twig' %}

{% block title %}Ajouter un site - Affilio{% endblock %}

{% block content %}
<div class="max-w-4xl mx-auto">
    {# Header #}
    <div class="mb-8">
        <a href="{{ path('app_site_index') }}" class="inline-flex items-center gap-2 text-slate-500 hover:text-slate-700 transition-colors mb-4">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
            Retour aux sites
        </a>
        <h1 class="text-2xl lg:text-3xl font-bold text-slate-800">Connecter un nouveau site</h1>
        <p class="mt-1 text-slate-500">Choisissez le type de connexion et configurez votre site</p>
    </div>

    {{ form_start(form, {'attr': {'class': 'space-y-8', 'id': 'site-form'}}) }}

    {# Step 1: Connector Type Selection #}
    <div class="card rounded-2xl overflow-hidden">
        <div class="p-6 border-b border-slate-100">
            <div class="flex items-center gap-3">
                <div class="w-8 h-8 rounded-lg bg-primary-100 flex items-center justify-center text-primary-600 font-bold">1</div>
                <h2 class="text-lg font-semibold text-slate-800">Type de connexion</h2>
            </div>
        </div>
        <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
                {% for type, connector in connectors %}
                    <label class="connector-card relative cursor-pointer group" data-connector-type="{{ type }}">
                        <input type="radio" name="{{ form.type.vars.full_name }}" value="{{ type }}"
                               class="sr-only peer"
                               {{ form.type.vars.value == type ? 'checked' : '' }}>
                        <div class="p-6 rounded-xl border-2 border-slate-200 bg-slate-50 transition-all
                                    peer-checked:border-primary-500 peer-checked:bg-primary-50
                                    hover:border-slate-300 hover:bg-slate-100">
                            <div class="flex items-start gap-4">
                                <div class="w-12 h-12 rounded-xl flex items-center justify-center
                                            {% if type == 'wordpress' %}bg-blue-100{% elseif type == 'api' %}bg-purple-100{% else %}bg-orange-100{% endif %}">
                                    {% if type == 'wordpress' %}
                                        <svg class="w-6 h-6 text-blue-600" viewBox="0 0 24 24" fill="currentColor">
                                            <path d="M12 2C6.486 2 2 6.486 2 12s4.486 10 10 10 10-4.486 10-10S17.514 2 12 2zm0 19.5c-5.247 0-9.5-4.253-9.5-9.5S6.753 2.5 12 2.5s9.5 4.253 9.5 9.5-4.253 9.5-9.5 9.5zm-4.023-4.662l1.702-4.938L8.11 7.17l3.89 4.42 3.89-4.42-1.569 4.73 1.702 4.938L12 12.82l-4.023 4.018z"/>
                                        </svg>
                                    {% elseif type == 'api' %}
                                        <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                        </svg>
                                    {% else %}
                                        <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
                                        </svg>
                                    {% endif %}
                                </div>
                                <div class="flex-1">
                                    <h3 class="font-semibold text-slate-800">{{ connector.name }}</h3>
                                    <p class="text-sm text-slate-500 mt-1">{{ connector.description|slice(0, 80) }}...</p>
                                </div>
                            </div>
                            <div class="absolute top-4 right-4 w-5 h-5 rounded-full border-2 border-slate-300
                                        peer-checked:border-primary-500 peer-checked:bg-primary-500 transition-all
                                        flex items-center justify-center">
                                <svg class="w-3 h-3 text-white opacity-0 peer-checked:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
                                </svg>
                            </div>
                        </div>
                    </label>
                {% endfor %}
            </div>
            {{ form_errors(form.type) }}
        </div>
    </div>

    {# Step 2: Basic Configuration #}
    <div class="card rounded-2xl overflow-hidden">
        <div class="p-6 border-b border-slate-100">
            <div class="flex items-center gap-3">
                <div class="w-8 h-8 rounded-lg bg-primary-100 flex items-center justify-center text-primary-600 font-bold">2</div>
                <h2 class="text-lg font-semibold text-slate-800">Configuration</h2>
            </div>
        </div>
        <div class="p-6 space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-2">{{ form.name.vars.label }}</label>
                    {{ form_widget(form.name, {'attr': {'class': 'w-full px-4 py-3 rounded-xl border border-slate-200 bg-white text-slate-800 placeholder-slate-400 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all'}}) }}
                    {{ form_errors(form.name) }}
                </div>

                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-2">{{ form.url.vars.label }}</label>
                    {{ form_widget(form.url, {'attr': {'class': 'w-full px-4 py-3 rounded-xl border border-slate-200 bg-white text-slate-800 placeholder-slate-400 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all'}}) }}
                    {{ form_errors(form.url) }}
                </div>
            </div>

            <div>
                <label class="block text-sm font-medium text-slate-700 mb-2">{{ form.apiToken.vars.label }}</label>
                {{ form_widget(form.apiToken, {'attr': {'class': 'w-full px-4 py-3 rounded-xl border border-slate-200 bg-white text-slate-800 placeholder-slate-400 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all'}}) }}
                {{ form_errors(form.apiToken) }}
            </div>

            {# Dynamic config fields based on connector type #}
            {% for child in form %}
                {% if child.vars.name starts with 'config_' %}
                    <div class="config-field-wrapper" data-field="{{ child.vars.name }}">
                        <label class="block text-sm font-medium text-slate-700 mb-2">{{ child.vars.label }}</label>
                        {{ form_widget(child, {'attr': {'class': 'w-full px-4 py-3 rounded-xl border border-slate-200 bg-white text-slate-800 placeholder-slate-400 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all'}}) }}
                        {% if child.vars.help is defined and child.vars.help %}
                            <p class="mt-2 text-xs text-slate-500">{{ child.vars.help }}</p>
                        {% endif %}
                        {{ form_errors(child) }}
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>

    {# Step 3: Features Overview (informational) #}
    <div class="card rounded-2xl overflow-hidden">
        <div class="p-6 border-b border-slate-100">
            <div class="flex items-center gap-3">
                <div class="w-8 h-8 rounded-lg bg-primary-100 flex items-center justify-center text-primary-600 font-bold">3</div>
                <h2 class="text-lg font-semibold text-slate-800">Fonctionnalites disponibles</h2>
            </div>
        </div>
        <div class="p-6">
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                <div class="flex items-center gap-2 text-slate-600">
                    <svg class="w-5 h-5 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    <span class="text-sm">Publication</span>
                </div>
                <div class="flex items-center gap-2 text-slate-600">
                    <svg class="w-5 h-5 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    <span class="text-sm">Statistiques</span>
                </div>
                <div class="flex items-center gap-2 text-slate-600 wordpress-feature">
                    <svg class="w-5 h-5 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    <span class="text-sm">Categories</span>
                </div>
                <div class="flex items-center gap-2 text-slate-600 wordpress-feature">
                    <svg class="w-5 h-5 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    <span class="text-sm">Tags</span>
                </div>
                <div class="flex items-center gap-2 text-slate-600 wordpress-feature">
                    <svg class="w-5 h-5 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    <span class="text-sm">Medias</span>
                </div>
                <div class="flex items-center gap-2 text-slate-600 wordpress-feature">
                    <svg class="w-5 h-5 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    <span class="text-sm">Planification</span>
                </div>
                <div class="flex items-center gap-2 text-slate-600">
                    <svg class="w-5 h-5 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    <span class="text-sm">Brouillons</span>
                </div>
            </div>

            <div class="mt-6 p-4 rounded-xl bg-primary-50 border border-primary-200">
                <div class="flex gap-3">
                    <svg class="w-5 h-5 text-primary-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <div>
                        <h3 class="text-sm font-medium text-primary-700 mb-1">Conseil</h3>
                        <p class="text-sm text-slate-600">Pour WordPress, assurez-vous que le plugin Affilio est installe et active sur votre site. Le token API est genere automatiquement dans les parametres du plugin.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Actions #}
    <div class="flex flex-col sm:flex-row justify-end gap-3">
        <a href="{{ path('app_site_index') }}" class="px-6 py-3 rounded-xl border border-slate-200 text-slate-600 hover:bg-slate-50 transition-colors text-center font-medium">
            Annuler
        </a>
        <button type="submit" class="btn-primary flex items-center justify-center gap-2 px-6 py-3 rounded-xl text-white font-medium">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Connecter le site
        </button>
    </div>

    {{ form_end(form) }}
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const connectorCards = document.querySelectorAll('.connector-card input[type="radio"]');

    connectorCards.forEach(radio => {
        radio.addEventListener('change', function() {
            // Update visual selection
            document.querySelectorAll('.connector-card > div').forEach(card => {
                card.classList.remove('border-primary-500', 'bg-primary-50');
                card.classList.add('border-slate-200', 'bg-slate-50');
            });

            if (this.checked) {
                const card = this.closest('.connector-card').querySelector('div');
                card.classList.remove('border-slate-200', 'bg-slate-50');
                card.classList.add('border-primary-500', 'bg-primary-50');
            }
        });
    });
});
</script>
{% endblock %}
