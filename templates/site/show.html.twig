{% extends 'base.html.twig' %}

{% block title %}{{ site.name }} - Affilio{% endblock %}

{% block content %}
{# Header #}
<div class="mb-8">
    <a href="{{ path('app_site_index') }}" class="inline-flex items-center gap-2 text-slate-500 hover:text-slate-700 transition-colors mb-4">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        Retour aux sites
    </a>

    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
        <div class="flex items-center gap-4">
            <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-primary-400 to-primary-600 flex items-center justify-center text-white font-bold text-xl">
                {{ site.name|first|upper }}
            </div>
            <div>
                <div class="flex items-center gap-3">
                    <h1 class="text-2xl lg:text-3xl font-bold text-slate-800">{{ site.name }}</h1>
                    {% if site.status == 'online' %}
                        <span class="flex items-center gap-2 px-3 py-1 rounded-full bg-emerald-100 text-emerald-600 text-xs font-medium">
                            <span class="w-1.5 h-1.5 rounded-full bg-emerald-500"></span>
                            En ligne
                        </span>
                    {% elseif site.status == 'offline' %}
                        <span class="flex items-center gap-2 px-3 py-1 rounded-full bg-amber-100 text-amber-600 text-xs font-medium">
                            <span class="w-1.5 h-1.5 rounded-full bg-amber-500"></span>
                            Hors ligne
                        </span>
                    {% elseif site.status == 'error' %}
                        <span class="flex items-center gap-2 px-3 py-1 rounded-full bg-red-100 text-red-600 text-xs font-medium">
                            <span class="w-1.5 h-1.5 rounded-full bg-red-500"></span>
                            Erreur
                        </span>
                    {% else %}
                        <span class="flex items-center gap-2 px-3 py-1 rounded-full bg-slate-100 text-slate-500 text-xs font-medium">
                            <span class="w-1.5 h-1.5 rounded-full bg-slate-400"></span>
                            Inconnu
                        </span>
                    {% endif %}
                </div>
                <a href="{{ site.url }}" target="_blank" class="text-sm text-slate-500 hover:text-primary-600 transition-colors">
                    {{ site.url }}
                </a>
            </div>
        </div>

        <div class="flex items-center gap-3">
            <a href="{{ path('app_site_content', {id: site.id}) }}" class="btn-secondary flex items-center gap-2 px-4 py-2.5 rounded-xl">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                </svg>
                Contenu
            </a>
            <form action="{{ path('app_site_test', {id: site.id}) }}" method="post">
                <button type="submit" class="btn-secondary flex items-center gap-2 px-4 py-2.5 rounded-xl">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    Tester
                </button>
            </form>
            <a href="{{ path('app_site_edit', {id: site.id}) }}" class="btn-secondary flex items-center gap-2 px-4 py-2.5 rounded-xl">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
                Modifier
            </a>
            <a href="{{ path('app_article_create_for_site', {id: site.id}) }}" class="btn-primary flex items-center gap-2 px-4 py-2.5 rounded-xl text-white font-medium">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
                Publier
            </a>
        </div>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    {# Site Info Card #}
    <div class="lg:col-span-2 card rounded-2xl overflow-hidden">
        <div class="p-6 border-b border-slate-100">
            <h2 class="text-lg font-semibold text-slate-800">Informations du site</h2>
        </div>
        <div class="divide-y divide-slate-100">
            <div class="p-4 flex items-center justify-between">
                <span class="text-slate-500">Nom</span>
                <span class="text-slate-800 font-medium">{{ site.name }}</span>
            </div>
            <div class="p-4 flex items-center justify-between">
                <span class="text-slate-500">URL</span>
                <a href="{{ site.url }}" target="_blank" class="text-primary-600 hover:text-primary-700 transition-colors">
                    {{ site.url }}
                </a>
            </div>
            <div class="p-4 flex items-center justify-between">
                <span class="text-slate-500">Token API</span>
                <code class="px-2 py-1 rounded-lg bg-slate-100 text-slate-600 text-xs">{{ site.apiToken[:20] }}...</code>
            </div>
            <div class="p-4 flex items-center justify-between">
                <span class="text-slate-500">Ajoute le</span>
                <span class="text-slate-800">{{ site.createdAt|date('d/m/Y H:i') }}</span>
            </div>
            <div class="p-4 flex items-center justify-between">
                <span class="text-slate-500">Derniere verification</span>
                <span class="text-slate-800">
                    {% if site.lastCheckedAt %}
                        {{ site.lastCheckedAt|date('d/m/Y H:i') }}
                    {% else %}
                        Jamais
                    {% endif %}
                </span>
            </div>
        </div>
    </div>

    {# Quick Actions #}
    <div class="card rounded-2xl p-6">
        <h2 class="text-lg font-semibold text-slate-800 mb-4">Actions rapides</h2>
        <div class="space-y-3">
            <a href="{{ path('app_article_create_for_site', {id: site.id}) }}" class="flex items-center gap-3 p-3 rounded-xl hover:bg-slate-50 transition-colors group">
                <div class="w-10 h-10 rounded-lg bg-primary-100 flex items-center justify-center group-hover:bg-primary-200 transition-colors">
                    <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                    </svg>
                </div>
                <div>
                    <p class="font-medium text-slate-800">Publier un article</p>
                    <p class="text-xs text-slate-500">Creer du contenu</p>
                </div>
            </a>
            <a href="{{ path('app_site_content', {id: site.id}) }}" class="flex items-center gap-3 p-3 rounded-xl hover:bg-slate-50 transition-colors group">
                <div class="w-10 h-10 rounded-lg bg-emerald-100 flex items-center justify-center group-hover:bg-emerald-200 transition-colors">
                    <svg class="w-5 h-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                    </svg>
                </div>
                <div>
                    <p class="font-medium text-slate-800">Voir le contenu</p>
                    <p class="text-xs text-slate-500">Articles et pages</p>
                </div>
            </a>
            <a href="{{ site.url }}/wp-admin" target="_blank" class="flex items-center gap-3 p-3 rounded-xl hover:bg-slate-50 transition-colors group">
                <div class="w-10 h-10 rounded-lg bg-amber-100 flex items-center justify-center group-hover:bg-amber-200 transition-colors">
                    <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                    </svg>
                </div>
                <div>
                    <p class="font-medium text-slate-800">Admin WordPress</p>
                    <p class="text-xs text-slate-500">Acceder au back-office</p>
                </div>
            </a>
        </div>
    </div>
</div>

{# Statistics Card #}
<div class="card rounded-2xl overflow-hidden mt-6">
    <div class="p-6 border-b border-slate-100">
        <h2 class="text-lg font-semibold text-slate-800">Statistiques WordPress</h2>
        <p class="text-sm text-slate-500">Donnees recuperees depuis votre site</p>
    </div>
    <div class="p-6">
        {% if stats_error %}
            <div class="rounded-xl bg-red-50 border border-red-200 p-4">
                <div class="flex gap-3">
                    <svg class="w-5 h-5 text-red-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <div>
                        <h3 class="text-sm font-medium text-red-700">Impossible de recuperer les statistiques</h3>
                        <p class="text-sm text-red-600 mt-1">{{ stats_error }}</p>
                    </div>
                </div>
            </div>
        {% elseif stats %}
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mb-6">
                <div class="stat-card rounded-xl p-4">
                    <p class="text-slate-500 text-sm">Articles</p>
                    <p class="text-2xl font-bold text-slate-800 mt-1">{{ stats.totalPosts }}</p>
                </div>
                <div class="stat-card rounded-xl p-4">
                    <p class="text-slate-500 text-sm">Categories</p>
                    <p class="text-2xl font-bold text-slate-800 mt-1">{{ stats.totalCategories }}</p>
                </div>
                <div class="stat-card rounded-xl p-4">
                    <p class="text-slate-500 text-sm">Tags</p>
                    <p class="text-2xl font-bold text-slate-800 mt-1">{{ stats.totalTags }}</p>
                </div>
            </div>

            {% if stats.siteTitle or stats.wordpressVersion %}
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 pt-6 border-t border-slate-100">
                    {% if stats.siteTitle %}
                        <div>
                            <p class="text-slate-500 text-sm">Titre du site</p>
                            <p class="text-slate-800 font-medium">{{ stats.siteTitle }}</p>
                        </div>
                    {% endif %}
                    {% if stats.wordpressVersion %}
                        <div>
                            <p class="text-slate-500 text-sm">Version WordPress</p>
                            <p class="text-slate-800 font-medium">{{ stats.wordpressVersion }}</p>
                        </div>
                    {% endif %}
                </div>
            {% endif %}

            <p class="mt-4 text-xs text-slate-400">
                Donnees recuperees le {{ stats.fetchedAt|date('d/m/Y a H:i') }}
            </p>
        {% else %}
            <div class="text-center py-8">
                <div class="w-12 h-12 rounded-xl bg-slate-100 flex items-center justify-center mx-auto mb-3">
                    <svg class="w-6 h-6 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                    </svg>
                </div>
                <p class="text-slate-500">Aucune statistique disponible</p>
                <p class="text-slate-400 text-sm mt-1">Testez la connexion pour recuperer les donnees</p>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
