{% extends 'base.html.twig' %}

{% block title %}Sites - WPilot{% endblock %}

{% block content %}
{# Header #}
<div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4 mb-8">
    <div>
        <h1 class="text-2xl lg:text-3xl font-bold text-white">Sites WordPress</h1>
        <p class="mt-1 text-white/60">Gerez vos sites WordPress connectes</p>
    </div>
    <a href="{{ path('app_site_new') }}" class="btn-primary flex items-center gap-2 px-4 py-2.5 rounded-xl text-white font-medium w-fit">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
        <span>Ajouter un site</span>
    </a>
</div>

{% if sites|length > 0 %}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {% for site in sites %}
            <div class="glass-card rounded-2xl overflow-hidden group hover:border-primary-500/30 transition-all">
                <div class="p-6">
                    <div class="flex items-start justify-between mb-4">
                        <div class="flex items-center gap-3">
                            <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-primary-500 to-primary-700 flex items-center justify-center text-white font-bold text-lg">
                                {{ site.name|first|upper }}
                            </div>
                            <div>
                                <h3 class="font-semibold text-white group-hover:text-primary-400 transition-colors">{{ site.name }}</h3>
                                {% if site.status == 'online' %}
                                    <span class="flex items-center gap-1.5 text-xs text-emerald-400">
                                        <span class="w-1.5 h-1.5 rounded-full bg-emerald-400"></span>
                                        En ligne
                                    </span>
                                {% elseif site.status == 'offline' %}
                                    <span class="flex items-center gap-1.5 text-xs text-amber-400">
                                        <span class="w-1.5 h-1.5 rounded-full bg-amber-400"></span>
                                        Hors ligne
                                    </span>
                                {% elseif site.status == 'error' %}
                                    <span class="flex items-center gap-1.5 text-xs text-red-400">
                                        <span class="w-1.5 h-1.5 rounded-full bg-red-400"></span>
                                        Erreur
                                    </span>
                                {% else %}
                                    <span class="flex items-center gap-1.5 text-xs text-white/50">
                                        <span class="w-1.5 h-1.5 rounded-full bg-white/50"></span>
                                        Inconnu
                                    </span>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <a href="{{ site.url }}" target="_blank" class="text-sm text-white/50 hover:text-primary-400 truncate block mb-4 transition-colors">
                        {{ site.url }}
                    </a>

                    <div class="flex items-center gap-4 text-sm text-white/40">
                        <span class="flex items-center gap-1.5">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                            </svg>
                            {{ site.createdAt|date('d/m/Y') }}
                        </span>
                        {% if site.lastCheckedAt %}
                            <span class="flex items-center gap-1.5">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                                {{ site.lastCheckedAt|date('H:i') }}
                            </span>
                        {% endif %}
                    </div>
                </div>

                <div class="px-6 py-4 border-t border-white/5 flex items-center justify-between bg-white/[0.02]">
                    <a href="{{ path('app_site_show', {id: site.id}) }}" class="text-sm text-white/60 hover:text-white transition-colors">
                        Voir details
                    </a>
                    <a href="{{ path('app_article_create_for_site', {id: site.id}) }}" class="flex items-center gap-2 px-3 py-1.5 rounded-lg bg-primary-500/20 text-primary-400 hover:bg-primary-500/30 transition-colors text-sm font-medium">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                        </svg>
                        Publier
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
{% else %}
    <div class="glass-card rounded-2xl p-12 text-center">
        <div class="w-16 h-16 rounded-2xl bg-white/5 flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white/30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
            </svg>
        </div>
        <h3 class="text-lg font-medium text-white mb-2">Aucun site connecte</h3>
        <p class="text-white/50 mb-6">Commencez par connecter votre premier site WordPress</p>
        <a href="{{ path('app_site_new') }}" class="btn-primary inline-flex items-center gap-2 px-4 py-2.5 rounded-xl text-white font-medium">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
            </svg>
            Ajouter un site
        </a>
    </div>
{% endif %}
{% endblock %}
