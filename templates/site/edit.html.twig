{% extends 'base.html.twig' %}

{% block title %}Modifier {{ site.name }} - Affilio{% endblock %}

{% block content %}
<div class="max-w-2xl mx-auto">
    {# Header #}
    <div class="mb-8">
        <a href="{{ path('app_site_show', {id: site.id}) }}" class="inline-flex items-center gap-2 text-slate-500 hover:text-slate-700 transition-colors mb-4">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
            Retour au site
        </a>
        <h1 class="text-2xl lg:text-3xl font-bold text-slate-800">Modifier le site</h1>
        <p class="mt-1 text-slate-500">{{ site.name }}</p>
    </div>

    {# Edit Form #}
    <div class="card rounded-2xl overflow-hidden">
        <div class="p-6 border-b border-slate-100">
            <h2 class="text-lg font-semibold text-slate-800">Informations du site</h2>
        </div>
        <div class="p-6">
            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

            <div>
                <label class="block text-sm font-medium text-slate-700 mb-2">{{ form.name.vars.label }}</label>
                {{ form_widget(form.name, {'attr': {'class': 'w-full px-4 py-3 rounded-xl border border-slate-200 bg-white text-slate-800 placeholder-slate-400 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all'}}) }}
                {{ form_errors(form.name) }}
            </div>

            <div>
                <label class="block text-sm font-medium text-slate-700 mb-2">{{ form.url.vars.label }}</label>
                {{ form_widget(form.url, {'attr': {'class': 'w-full px-4 py-3 rounded-xl border border-slate-200 bg-white text-slate-800 placeholder-slate-400 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all'}}) }}
                {% if form.url.vars.help %}
                    <p class="mt-2 text-sm text-slate-500">{{ form.url.vars.help }}</p>
                {% endif %}
                {{ form_errors(form.url) }}
            </div>

            <div>
                <label class="block text-sm font-medium text-slate-700 mb-2">{{ form.apiToken.vars.label }}</label>
                {{ form_widget(form.apiToken, {'attr': {'class': 'w-full px-4 py-3 rounded-xl border border-slate-200 bg-white text-slate-800 placeholder-slate-400 focus:border-primary-500 focus:ring-2 focus:ring-primary-500/20 transition-all'}}) }}
                {% if form.apiToken.vars.help %}
                    <p class="mt-2 text-sm text-slate-500">{{ form.apiToken.vars.help }}</p>
                {% endif %}
                {{ form_errors(form.apiToken) }}
            </div>

            <div class="flex justify-end gap-3 pt-4">
                <a href="{{ path('app_site_show', {id: site.id}) }}" class="px-6 py-3 rounded-xl border border-slate-200 text-slate-600 hover:bg-slate-50 transition-colors font-medium">
                    Annuler
                </a>
                <button type="submit" class="btn-primary px-6 py-3 rounded-xl text-white font-medium">
                    Enregistrer les modifications
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>

    {# Danger Zone #}
    <div class="card rounded-2xl overflow-hidden mt-8">
        <div class="p-6 border-b border-slate-100">
            <h2 class="text-lg font-semibold text-red-600">Zone de danger</h2>
        </div>
        <div class="p-6">
            <p class="text-slate-600 mb-4">La suppression du site est irreversible. Toutes les donnees associees seront perdues.</p>
            <form action="{{ path('app_site_delete', {id: site.id}) }}" method="post" onsubmit="return confirm('Etes-vous sur de vouloir supprimer ce site ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ site.id) }}">
                <button type="submit" class="px-4 py-2.5 rounded-xl bg-red-100 text-red-700 hover:bg-red-200 transition-colors font-medium">
                    Supprimer ce site
                </button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
