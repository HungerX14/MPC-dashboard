{# Partial template for stats display (AJAX refresh) #}
<dl class="grid grid-cols-1 gap-5 sm:grid-cols-3">
    <div class="px-4 py-5 bg-gray-50 shadow rounded-lg overflow-hidden sm:p-6">
        <dt class="text-sm font-medium text-gray-500 truncate">Total Articles</dt>
        <dd class="mt-1 text-3xl font-semibold text-gray-900">{{ stats.totalPosts }}</dd>
    </div>
    <div class="px-4 py-5 bg-gray-50 shadow rounded-lg overflow-hidden sm:p-6">
        <dt class="text-sm font-medium text-gray-500 truncate">Categories</dt>
        <dd class="mt-1 text-3xl font-semibold text-gray-900">{{ stats.totalCategories }}</dd>
    </div>
    <div class="px-4 py-5 bg-gray-50 shadow rounded-lg overflow-hidden sm:p-6">
        <dt class="text-sm font-medium text-gray-500 truncate">Tags</dt>
        <dd class="mt-1 text-3xl font-semibold text-gray-900">{{ stats.totalTags }}</dd>
    </div>
</dl>

{% if stats.siteTitle or stats.wordpressVersion %}
    <div class="mt-6 border-t border-gray-200 pt-6">
        <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
            {% if stats.siteTitle %}
                <div>
                    <dt class="text-sm font-medium text-gray-500">Titre du site</dt>
                    <dd class="mt-1 text-sm text-gray-900">{{ stats.siteTitle }}</dd>
                </div>
            {% endif %}
            {% if stats.wordpressVersion %}
                <div>
                    <dt class="text-sm font-medium text-gray-500">Version WordPress</dt>
                    <dd class="mt-1 text-sm text-gray-900">{{ stats.wordpressVersion }}</dd>
                </div>
            {% endif %}
        </dl>
    </div>
{% endif %}

<p class="mt-4 text-xs text-gray-500">
    Donnees recuperees le {{ stats.fetchedAt|date('d/m/Y a H:i') }}
</p>
