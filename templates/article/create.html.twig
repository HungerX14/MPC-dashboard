{% extends 'base.html.twig' %}

{% block title %}Creer un article - WPilot{% endblock %}

{% block content %}
<div class="max-w-4xl mx-auto">
    {# Header #}
    <div class="mb-8">
        <a href="{{ path('app_dashboard') }}" class="inline-flex items-center gap-2 text-white/50 hover:text-white transition-colors mb-4">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
            Retour au dashboard
        </a>
        <h1 class="text-2xl lg:text-3xl font-bold text-white">Creer un article</h1>
        <p class="mt-1 text-white/60">
            {% if selected_site is defined and selected_site %}
                Publication sur <span class="text-primary-400">{{ selected_site.name }}</span>
            {% else %}
                Selectionnez un site et redigez votre article
            {% endif %}
        </p>
    </div>

    {# Form Card #}
    <div class="glass-card rounded-2xl overflow-hidden">
        <div class="p-6 lg:p-8">
            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

            {# Site Selection #}
            <div>
                <label class="block text-sm font-medium text-white/70 mb-2">Site de destination</label>
                <div class="relative">
                    {{ form_widget(form.site, {'attr': {'class': 'form-input w-full px-4 py-3 rounded-xl appearance-none'}}) }}
                </div>
                {{ form_errors(form.site) }}
            </div>

            {# Title #}
            <div>
                <label class="block text-sm font-medium text-white/70 mb-2">Titre de l'article</label>
                {{ form_widget(form.title, {'attr': {'class': 'form-input w-full px-4 py-3 rounded-xl', 'placeholder': 'Entrez le titre de votre article'}}) }}
                {{ form_errors(form.title) }}
            </div>

            {# Content #}
            <div>
                <label class="block text-sm font-medium text-white/70 mb-2">Contenu</label>
                {{ form_widget(form.content, {'attr': {'class': 'form-input w-full px-4 py-3 rounded-xl min-h-64', 'rows': 12, 'placeholder': 'Redigez votre article ici... Vous pouvez utiliser du HTML.'}}) }}
                <p class="mt-2 text-xs text-white/40">Vous pouvez utiliser du HTML pour formater votre contenu.</p>
                {{ form_errors(form.content) }}
            </div>

            {# Excerpt #}
            <div>
                <label class="block text-sm font-medium text-white/70 mb-2">Extrait (optionnel)</label>
                {{ form_widget(form.excerpt, {'attr': {'class': 'form-input w-full px-4 py-3 rounded-xl', 'rows': 3, 'placeholder': 'Court resume de l\'article pour les listes et aperçus'}}) }}
                {{ form_errors(form.excerpt) }}
            </div>

            {# Status #}
            <div>
                <label class="block text-sm font-medium text-white/70 mb-2">Statut de publication</label>
                {{ form_widget(form.status, {'attr': {'class': 'form-input w-full px-4 py-3 rounded-xl appearance-none'}}) }}
                {{ form_errors(form.status) }}
            </div>

            {# Categories and Tags #}
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <div>
                    <label class="block text-sm font-medium text-white/70 mb-2">Categories</label>
                    {{ form_widget(form.categoriesInput, {'attr': {'class': 'form-input w-full px-4 py-3 rounded-xl', 'placeholder': 'Tech, WordPress, ...'}}) }}
                    <p class="mt-2 text-xs text-white/40">Separees par des virgules</p>
                </div>

                <div>
                    <label class="block text-sm font-medium text-white/70 mb-2">Tags</label>
                    {{ form_widget(form.tagsInput, {'attr': {'class': 'form-input w-full px-4 py-3 rounded-xl', 'placeholder': 'seo, tutoriel, ...'}}) }}
                    <p class="mt-2 text-xs text-white/40">Separes par des virgules</p>
                </div>
            </div>

            {# Info Box #}
            <div class="rounded-xl bg-primary-500/10 border border-primary-500/20 p-4">
                <div class="flex gap-3">
                    <div class="flex-shrink-0">
                        <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-sm font-medium text-primary-400 mb-1">Information</h3>
                        <ul class="text-sm text-white/60 space-y-1">
                            <li>• L'article sera envoye directement a WordPress via l'API</li>
                            <li>• Les categories et tags seront crees automatiquement s'ils n'existent pas</li>
                            <li>• Choisissez "Brouillon" pour relire l'article avant publication</li>
                        </ul>
                    </div>
                </div>
            </div>

            {# Actions #}
            <div class="flex flex-col sm:flex-row justify-end gap-3 pt-6 border-t border-white/10">
                <a href="{{ path('app_dashboard') }}" class="px-6 py-2.5 rounded-xl border border-white/20 text-white/70 hover:bg-white/5 transition-colors text-center font-medium">
                    Annuler
                </a>
                <button type="submit" class="btn-primary flex items-center justify-center gap-2 px-6 py-2.5 rounded-xl text-white font-medium">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"/>
                    </svg>
                    Publier l'article
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
